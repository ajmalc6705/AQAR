<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hr_loan_form" model="ir.ui.view">
            <field name="name">hr.loan.form</field>
            <field name="model">hr.loan</field>
            <field name="arch" type="xml">
                <form string="Loan Application">
                    <header>
                        <!--Workflow-->

                        <button name="generate_loan_installment" string="Generate Installment" type="object"
                                class="oe_highlight btn-warning"/>
                        <button string="Approve" type="object" name="approve"
                                class="oe_highlight"
                                attrs="{'invisible': [('state','not in',('draft'))]}"/>
                        <button name="split_loan" string="Split Installments" type="object"
                                attrs="{'invisible': [('state','not in',('approved'))]}"
                                class="oe_highlight" icon="fa-columns"
                        >
                        </button>
                        <button string="Refuse" type="object" name="refuse"
                                attrs="{'invisible': [('state','not in',('draft'))]}"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,approved"/>
                    </header>
                    <div class="alert alert-warning mb-0" role="alert"
                         attrs="{'invisible': [('check_deserve_emp','!=', True)]}">
                        Last Loan Recovery Less Than 6 Months
                    </div>
                    <sheet attrs="{'readonly': [('state', 'in', ['done', 'approved'])]}">
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" class="oe_inline" readonly="1"/>
                            </h1>
                        </div>
                        <group string="Employee Details">
                            <group>
                                <field name="employee_id"
                                       attrs="{'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                                <field name="job_id"/>
                                <field name="is_omani" invisible="1"/>
                            </group>
                            <group>
                                <field name="department"/>
                                <field name="date_of_joining"/>
                                <field name="gratuity" invisible="1"
                                       attrs="{'invisible': [('is_omani', '=', 'omani')]}"/>
                            </group>
                        </group>

                        <group>
                            <group>
                                <field name="date_request"
                                       attrs="{'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                                <field name="date_recovered" readonly="1"/>
                            </group>
                            <group>
                                <field name="date_approved"
                                       attrs="{'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                            </group>
                        </group>
                        <group>
                            <group string="Computation Details">
                                <field name="amount"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="installment_type"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="no_of_month"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"
                                       string="No. Of Periods / Amount"/>
                                <field name="start_date_pay"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="last_installment_date"
                                       attrs="{'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                            </group>

                            <group string="Accounting Details">
                                <field name="employee_acc"
                                       attrs="{'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                                <field name="analytic_distribution" widget="analytic_distribution"
                                       attrs="{'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                                <field name="journal"
                                       attrs="{'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                                <field name="treasury_acc"
                                       attrs="{'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                                <field name="company_id"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="check_deserve_emp" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Installments"
                                  attrs="{'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}">
                                <group>
                                    <group>
                                        <field name="journal_entry"/>
                                    </group>
                                </group>
                                <field name="installments" string="Installments">
                                    <tree string="Installments" create="false" editable="bottom">
                                        <field name="state" invisible="1"/>
                                        <field name="date_pay" force_save="1"/>
                                        <field name="amount"
                                               attrs="{'readonly': [('state', 'not in', ['pa_admin', 'draft'])]}"
                                               force_save="1"/>
                                        <field name="paid" readonly=""/>
                                        <field name="paid_amount" readonly="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="notes" force_save="1"/>
                                        <button name="mark_as_paid_loan" string="Mark As Paid" type="object"
                                                class="oe_highlight"
                                                attrs="{'invisible':[('paid','=',True)]}"/>

                                    </tree>
                                </field>

                                <group col="12">
                                    <group colspan="8">
                                        <field name="notes" string="Remarks" placeholder="Remarks ..."
                                               attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                                    </group>
                                    <!-- Totals (only invoices / receipts) -->
                                    <group colspan="4">
                                        <group class="oe_subtotal_footer oe_right">
                                            <field name="amount_total" widget='monetary'
                                                   options="{'currency_field': 'currency_id'}"/>
                                            <field name="amount_paid" widget='monetary'
                                                   options="{'currency_field': 'currency_id'}"/>
                                            <field name="amount_balance"
                                                   class="oe_subtotal_footer_separator" widget='monetary'
                                                   options="{'currency_field': 'currency_id'}"/>
                                        </group>
                                    </group>
                                </group>
                                <div class="oe_clear"/>
                            </page>
                            <page name="payslips" string="Payslips">
                                <field name="payslip_ids" widget="one2many_list"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_loan_tree" model="ir.ui.view">
            <field name="name">hr.loan.tree</field>
            <field name="model">hr.loan</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="emp_id"/>
                    <field name="amount_total" widget='monetary'
                           options="{'currency_field': 'currency_id'}"/>
                    <field name="amount_paid" widget='monetary'
                           options="{'currency_field': 'currency_id'}"/>
                    <field name="amount_balance" widget='monetary'
                           options="{'currency_field': 'currency_id'}"/>
                    <field name="company_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_loan_installment_tree" model="ir.ui.view">
            <field name="name">hr.loan.installment.tree</field>
            <field name="model">hr.loan.installments</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0" delete="0" sample="1">
                    <field name="employee_id" readonly="1"/>
                    <field name="date_pay" readonly="1"/>
                    <field name="amount" readonly="1"/>
                    <field name="paid" readonly="1"/>
                    <field name="loan_id" readonly="1"/>
                    <field name="payslip_id" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="search_hr_loan_main" model="ir.ui.view">
            <field name="name">hr.loan.search</field>
            <field name="model">hr.loan</field>
            <field name="arch" type="xml">
                <search string="Search Loan">
                    <filter name="state_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="state_all" string="Processed"
                            domain="[('state', 'not in', ('draft', 'done'))]" context="{'group_by':'state'}"/>
                    <filter name="state_paid" string="Paid" domain="[('state', '=', 'done')]"/>

                    <field name="name" string="Reference"/>
                    <field name="employee_id" string="Employee"/>
                    <field name="department" string="Department"/>
                    <field name="job_id" string="Job"/>
                    <field name="date_request" string="Date Request"/>
                    <field name="date_approved" string="Date Approved"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter name="group_state" string="Status" context="{'group_by':'state'}"/>
                        <filter name="employee" string="Employee" context="{'group_by':'employee_id'}"/>
                        <filter name="bu" string="Business Unit" context="{'group_by':'account_analytic_id'}"/>
                        <filter name="department" string="Department" context="{'group_by':'department'}"/>
                        <filter name="job" string="Job" context="{'group_by':'job_id'}"/>
                        <separator/>
                        <filter name="request_date" string="Date Request" context="{'group_by':'date_request'}"/>
                        <filter name="approve_date" string="Date Approved" context="{'group_by':'date_approved'}"/>
                        <filter name="payment_date" string="Date Payment" context="{'group_by':'start_date_pay'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="search_hr_loan_installment_main" model="ir.ui.view">
            <field name="name">hr.loan.search</field>
            <field name="model">hr.loan.installments</field>
            <field name="arch" type="xml">
                <search string="Search Loan Installments">
                    <filter name="paid" string="Paid" domain="[('paid', '=', True)]"/>
                    <field name="employee_id" string="Employee"/>
                    <field name="date_pay" string="Installment Date"/>
                    <field name="loan_id" string="Loan Reference "/>
                    <group expand="0" string="Group By">
                        <filter name="installment_date" string="Installment Date" context="{'group_by':'date_pay'}"/>
                        <filter name="loan" string="Loan" context="{'group_by':'loan_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--Search View for Advance Salary-->
        <record id="search_hr_salary_advance" model="ir.ui.view">
            <field name="name">hr.salary.advance</field>
            <field name="model">hr.salary.advance</field>
            <field name="arch" type="xml">
                <search string="Search Loan">
                    <filter name="state_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="state_all" string="Processed"
                            domain="[('state', 'not in', ('draft', 'done'))]" context="{'group_by':'state'}"/>
                    <filter name="state_paid" string="Paid" domain="[('state', '=', 'done')]"/>

                    <field name="name" string="Reference"/>
                    <field name="employee_id" string="Employee"/>
                    <field name="department" string="Department"/>
                    <field name="job_id" string="Job"/>
                    <field name="date_request" string="Date Request"/>
                    <field name="date_approved" string="Date Approved"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter name="group_state" string="Status" context="{'group_by':'state'}"/>
                        <filter name="employee" string="Employee" context="{'group_by':'employee_id'}"/>
                        <filter name="department" string="Department" context="{'group_by':'department'}"/>
                        <filter name="job" string="Job" context="{'group_by':'job_id'}"/>
                        <separator/>
                        <filter name="request_date" string="Date Request" context="{'group_by':'date_request'}"/>
                        <filter name="approve_date" string="Date Approved" context="{'group_by':'date_approved'}"/>
                        <filter name="payment_date" string="Date Payment" context="{'group_by':'start_date_pay'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="view_hr_salary_advance_form" model="ir.ui.view">
            <field name="name">hr.salary.advance.form</field>
            <field name="model">hr.salary.advance</field>
            <field name="arch" type="xml">
                <form string="Salary Advance Application">
                    <header>
                        <!--Workflow-->
                        <button name="generate_installment" string="Generate Installment" type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('state','!=','draft')]}"/>

                        <button string="Send For Approval" type="object" name="sent"
                                class="oe_highlight"
                                attrs="{'invisible': [('state','!=','p_accountant')]}"/>
                        <button string="Approve" type="object" name="approve"
                                class="oe_highlight"
                                attrs="{'invisible': [('state','!=','to_approve')]}"/>
                        <button string="Refuse" type="object" name="refuse"
                                attrs="{'invisible': [('state','!=','to_approve')]}"/>
                        <button string="Cancel" type="object" name="cancel"
                                attrs="{'invisible': [('state','!=','approved')]}"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,approved"/>
                    </header>
                    <div class="alert alert-warning mb-0" role="alert"
                         attrs="{'invisible': [('check_previous_adc','!=', True)]}">
                        Already Has A Pending Advance Salary.
                    </div>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" class="oe_inline" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"
                                       attrs="{'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                                <field name="department"/>
                                <field name="job_id"/>
                                <field name="check_previous_adc" invisible="1"/>
                            </group>
                            <group>
                                <field name="emp_id"/>
                                <field name="date_request"/>
                                <field name="date_approved"/>
                            </group>
                            <group string="Ticket Request Details">
                                <field name="ticket_reference"/>
                                <field name="ticket_reference_id" invisible="1"/>
                                <field name="remark"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="employee_acc"
                                       attrs="{'required': [('state', 'in', ['p_accountant'])], 'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                                <field name="journal"
                                       attrs="{'required': [('state', 'in', ['p_accountant'])], 'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                                <field name="no_of_month"
                                       attrs="{'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                                <field name="company_id"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="treasury_acc"
                                       attrs="{'required': [('state', 'in', ['p_accountant'])], 'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                                <field name="amount"
                                       attrs="{'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                                <field name="start_date_pay"
                                       attrs="{'readonly': [('state', 'in', ['done', 'approved', 'cancel'])]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Installments" attrs="{'readonly': [('state', 'in', ['done', 'approved'])]}">
                                <group>
                                    <field name="journal_entry"/>
                                </group>
                                <field name="installments">
                                    <tree string="Installments" create="false" editable="bottom">
                                        <field name="date_pay"/>
                                        <field name="amount"/>
                                        <field name="paid"/>
                                        <field name="notes"/>
                                        <field name="company_id" invisible="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="mrf_total">
                                    <field name="amount_total" widget='monetary'
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount_paid" widget='monetary'
                                           options="{'currency_field': 'currency_id'}"/>
                                    <label for="amount_balance" class="oe_subtotal_footer_separator"/>
                                    <field name="amount_balance" nolabel="1" class="oe_subtotal_footer_separator"
                                           widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <div class="oe_clear"/>
                            </page>
                        </notebook>
                    </sheet>
                    <!--<button name="put_in_pack" string="Pack" type="object" icon="terp-product"
                    attrs="{'invisible': [('result_package_id', '!=', False)]}"/>-->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_salary_advance_tree" model="ir.ui.view">
            <field name="name">hr.salary.advance.tree</field>
            <field name="model">hr.salary.advance</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="emp_id"/>
                    <!--<field name="payslip_id"/>-->
                    <field name="state"/>
                    <field name="company_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="action_hr_loan" model="ir.actions.act_window">
            <field name="name">Employee Loans</field>
            <field name="res_model">hr.loan</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_type':'loan', 'type':'loan'}</field>
        </record>

        <record id="action_hr_loan_installment" model="ir.actions.act_window">
            <field name="name">Employee Loans Installments</field>
            <field name="res_model">hr.loan.installments</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="view_advance_salary_installment_tree" model="ir.ui.view">
            <field name="name">hr.salary.installment.tree</field>
            <field name="model">hr.salary.installments</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0" delete="0" sample="1">
                    <field name="advance_id" readonly="1"/>
                    <field name="date_pay" readonly="1"/>
                    <field name="amount" readonly="1"/>
                    <field name="paid" readonly="1"/>
                    <!-- <field name="proposed_amount" readonly="1" /> -->
                </tree>
            </field>
        </record>
        <record id="view_advance_salary_installment_search" model="ir.ui.view">
            <field name="name">hr.salary.installments.search</field>
            <field name="model">hr.salary.installments</field>
            <field name="arch" type="xml">
                <search string="Search Advance Salary Installments">
                    <filter name="paid" string="Paid" domain="[('paid', '=', True)]"/>
                    <field name="advance_id" string="Advance Salary Reference "/>
                    <group expand="0" string="Group By">
                        <filter name="date_pay" string="Installment Date" context="{'group_by':'date_pay'}"/>
                        <filter name="advance_id" string="Advance Ref" context="{'group_by':'advance_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_advance_salary_installment" model="ir.actions.act_window">
            <field name="name">Employee Advance Salary Installments</field>
            <field name="res_model">hr.salary.installments</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="action_hr_salary_advance" model="ir.actions.act_window">
            <field name="name">Salary Advance</field>
            <field name="res_model">hr.salary.advance</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--        main menu for loans-->
        <menuitem id="menu_hr_root_loans" name="Loans &amp; Advances" sequence="29"
                  web_icon="atheer_loan_management,static/description/loans.png"/>
        <!--        parent="hr.menu_hr_root"-->
        <menuitem action="action_hr_loan" id="hr_loan_menu" parent="atheer_loan_management.menu_hr_root_loans"
                  name="Loan Application"
                  sequence="10"/>
        <menuitem action="action_hr_loan_installment" id="hr_loan_installment_menu"
                  parent="atheer_loan_management.menu_hr_root_loans" name="Loan Installments"
                  sequence="14"/>
        <!--        <menuitem action="action_advance_salary_installment" id="advance_salary_installment_menu"-->
        <!--                  parent="atheer_loan_management.menu_hr_root_loans" name="Advance Salary Installments"-->
        <!--                  sequence="16" />-->

        <!--        <menuitem action="action_hr_salary_advance" id="hr_salary_advance_menu"-->
        <!--                  parent="atheer_loan_management.menu_hr_root_loans"-->
        <!--                  name="Advance Salary" sequence="15" />-->

        <!--        <menuitem id="loan_reports" name="Reports"
                       parent="atheer_loan_management.menu_hr_root_loans"/>
                 <menuitem id="menu_loan_outstanding_report" name="Loan Outstanding Report"
                          parent="loan_reports"
                          action="loan_outstanding_report_action" /> -->

    </data>
    <data noupdate="1">
        <record forcecreate="True" id="decimal_loan" model="decimal.precision">
            <field name="name">Loan</field>
            <field name="digits">3</field>
        </record>

    </data>
</odoo>
