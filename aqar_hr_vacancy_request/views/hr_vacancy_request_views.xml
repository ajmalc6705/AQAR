<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_vacancy_request_tree" model="ir.ui.view">
        <field name="name">hr.vacancy.request.tree</field>
        <field name="model">hr.vacancy.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="date"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>
    <!--    Hr Vacancy Form View-->
    <record id="hr_vacancy_request_form" model="ir.ui.view">
        <field name="name">hr.vacancy.request.form</field>
        <field name="model">hr.vacancy.request</field>
        <field name="arch" type="xml">
            <form string="IoU">
                <header>
                    <button name="action_approve" type="object" string="Confirm"
                            states="draft" class="btn-primary"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft,confirm"/>
                    <button name="action_reset_draft" type="object" string="Reset to Draft" states="cancel,confirm"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div name="button_box" position="inside">
                        <button class="oe_stat_button" type="object"
                                name="get_job_position"
                                icon="fa-pencil-square-o"
                                string="Job Position" attrs="{'invisible':[('state','!=','confirm')]}">
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="ref" placeholder="IoU"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="dept_id" attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field name="existing_target"
                                   attrs="{'invisible': [('job_position_based_on', '=', 'new')],'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="target" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="project_code" attrs="{'readonly': [('state', '!=', 'draft')]}"/>

                        </group>
                        <group>
                            <field name="job_position_based_on" widget="radio"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="job_id"
                                   attrs="{'invisible': [('job_position_based_on', '=', 'new')],'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="job_name"
                                   attrs="{'invisible': [('job_position_based_on', '=', 'existing')],'readonly': [('state', '!=', 'draft')]}"/>

                            <field name="company_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="skills" string="Skills">
                            <field name="skill_ids" widget="one2many_list"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree editable="bottom">
                                    <field name="display_name"/>
                                    <field name="skill_type_id"/>
                                </tree>
                            </field>
                        </page>
                        <page name="educational_qualifications" string="Educational Qualifications">
                            <field name="educational_qualification_ids" widget="one2many_list"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="type_name"/>
                                </tree>
                            </field>
                        </page>
                        <page name="certifications" string="Certifications">
                            <field name="certification_ids" widget="one2many_list"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="type_name"/>
                                </tree>
                            </field>
                        </page>
                        <page name="other specifications" string="Other Specifications">
                            <field name="notes" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <!--    window action for IoU-->
    <record id="action_vacancy_request" model="ir.actions.act_window">
        <field name="name">Vacancy Request</field>
        <field name="res_model">hr.vacancy.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Vacancy Request
            </p>
        </field>
    </record>
    <menuitem id="vacancy_request_menu" name="Vacancy Request" parent="hr_recruitment.menu_hr_recruitment_root"
              action="action_vacancy_request"/>
</odoo>