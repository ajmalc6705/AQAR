<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--Search Cancelled Cheque-->
        <record id="search_cheque_cancelled_filter" model="ir.ui.view">
            <field name="name">Cancelled Cheques</field>
            <field name="model">account.cheque.cancelled</field>
            <field name="arch" type="xml">
                <search>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                    <field name="cheque_number"/>
                    <field name="bearer"/>
                    <field name="amount"/>
                    <field name="remarks"/>
                    <group expand="1" string="Group By">
                        <filter name="created_by" string="Created User" context="{'group_by':'create_uid'}"/>
                        <filter name="create_date" string="Created Date" context="{'group_by':'create_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--Tree Cancelled Cheques-->
        <record id="tree_cancelled_cheques" model="ir.ui.view">
            <field name="name">Cancelled Cheques</field>
            <field name="model">account.cheque.cancelled</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0" edit="0">
                    <field name="create_date" readonly="1"/>
                    <field name="create_uid" readonly="1"/>
                    <field name="cheque_number" readonly="1"/>
                    <field name="bearer" readonly="1"/>
                    <field name="company_id" readonly="1"/>
                    <field name="amount" readonly="1"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>

        <!--Action Cancelled Cheques-->
        <record id="action_check_cancelled" model="ir.actions.act_window">
            <field name="name">Cancelled Cheques</field>
            <field name="res_model">account.cheque.cancelled</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="search_cheque_cancelled_filter"/>
            <field name="target">current</field>
        </record>

        <!--Menu Cancelled Cheques-->
        <menuitem id="menu_cancelled_cheques"
                  name="Cancelled Cheques"
                  action="action_check_cancelled"
                  parent="account.menu_finance_payables"
                  sequence="20"
        />
    </data>
</odoo>
