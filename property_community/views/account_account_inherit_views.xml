<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_account_form_inherit_ppty_community" model="ir.ui.view">
        <field name="name">account.account.form.view.inherit.ppty.community</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='allowed_journal_ids']" position="after">
                <field name="is_admin_fund"/>
                <field name="is_sinking_fund"/>

            </xpath>
        </field>
    </record>

    <record id="view_move_form_inherit_ppty_community" model="ir.ui.view">
        <field name="name">account.move.inherit.ppty.community</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fiscal_position_id']" position="after">
                <field name="community_id" readonly="1"
                       options="{'no_create_edit':True, 'no_create':True,}"
                       attrs="{'invisible':[('community_id','==',False)]}"
                />
                <field name="community_start_date" readonly="1"
                       attrs="{'invisible':[('community_id','==',False)]}"
                />
                <field name="community_end_date" readonly="1"
                       attrs="{'invisible':[('community_id','==',False)]}"
                />
            </xpath>
        </field>
    </record>
</odoo>