<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_community_invoice_report" model="ir.actions.report">
        <field name="name">Community Invoice Report</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">property_community.report_community_invoice</field>
        <field name="report_file">property_community.report_community_invoice</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">(
            object.state == 'draft' and 'Community Draft Invoice- %s' % (object.name) or
            'Community Invoice - %s' % (object.name))
        </field>

    </record>

    <template id="report_community_invoice">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/>
                    <div class="oe_structure"/>

                    <div class="page" t-if="o.community_id">
                        <center>
                            <h1>Community Tax Invoice</h1>
                        </center>
                        <br/>


                        <div class="oe_structure"/>

                        <div class="col-12 row" style="margin-left:-10px;font-size:16px;">
                            <div class="col-6" name="customer_address">
                                <div t-if="o.partner_id">
                                    <span>
                                        <font color="#5278f2">
                                            <strong>Customer Address:</strong>
                                        </font>
                                    </span>
                                </div>
                                <div t-if="o.partner_id" name="partner_header">
                                    <div t-field="o.partner_id.self"
                                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    <p t-if="o.partner_id.sudo().vat">VAT ID:
                                        <span t-field="o.partner_id.sudo().vat"/>
                                    </p>
                                </div>
                            </div>

                            <div class="col-6 pull-right" style="margin-left:1px;" align="right" name="invoice_details">

                                <t class="mt16">
                                    Customer ID : Test
                                    <!--                                    <span t-field="o.invoice_date"/>-->
                                    <br/>
                                </t>
                                <t class="mt16">
                                    Property Details :
                                    <t t-set="unit_name" t-value="o.property_id.name +  + o.property_id.unit_seq"/>
                                    <span t-esc="unit_name"/>
                                    <!--                                    <span t-esc="o.property_id.name + str(o.property_id.unit_seq)"/>
                                    -->
                                    <br/>
                                </t>
                                <t t-if="o.invoice_date" class="mt16">
                                    Invoice Date :
                                    <span t-field="o.invoice_date"/>
                                    <br/>
                                </t>
                                <t t-if="o.invoice_date_due" class="mt16">
                                    Due Date :
                                    <span t-field="o.invoice_date_due"/>
                                    <br/>
                                </t>
                                <t t-if="o.name">
                                    <strong>Invoice No :
                                        <span t-field="o.name"/>
                                    </strong>

                                </t>
                                <br/>
                                <t>
                                    <strong>Unit Area (Sq.Mtr):
                                        <span t-field="o.property_id.area"/>
                                    </strong>

                                </t>
                                <br/>
                                <t>
                                    <strong>Yearly Budget:
                                        <span t-field="o.name"/>
                                    </strong>

                                </t>
                                <br/>

                            </div>
                        </div>
                        <br/>
                        <br/>
                        <div class="oe_structure"/>

                        <table class="table table-sm o_main_table table-borderless" name="invoice_line_table">
                            <thead>
                                <tr>
                                    <th name="th_sl_no" class="text-start">
                                        <span>SL.No</span>
                                    </th>
                                    <th name="th_description" class="text-start">
                                        <span>Description</span>
                                    </th>
                                    <th name="th_account" class="text-start">
                                        <span>Account</span>
                                    </th>
                                    <th name="th_quantity" class="text-end">
                                        <span>QTY</span>
                                    </th>
                                    <th name="th_priceunit"
                                        t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span>Unit Price</span>
                                    </th>
                                    <!--                                <th name="th_price_unit" t-if="display_discount"-->
                                    <!--                                    t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">-->
                                    <!--                                    <span>Disc.%</span>-->
                                    <!--                                </th>-->
                                    <th name="th_taxes"
                                        t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span>VAT</span>
                                    </th>
                                    <th name="th_subtotal" class="text-end">
                                        <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                        <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="sl" t-value="0"/>
                                <t t-set="lines"
                                   t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                <t t-foreach="lines" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                       groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                       groups="account.group_show_line_subtotals_tax_included"/>

                                    <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="line.display_type == 'product'"
                                           name="account_invoice_line_accountable">
                                            <t t-set="sl" t-value="sl+1"/>
                                            <td style="border-left: 1px;">
                                                <span t-esc="sl"/>
                                            </td>
                                            <td name="account_invoice_line_name">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                            <td name="invoice_line_account_name">
                                                <span t-if="line.account_id.name" t-field="line.account_id">

                                                </span>
                                            </td>

                                            <td class="text-end">
                                                <span t-field="line.quantity"/>
                                                <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                            </td>
                                            <td t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.price_unit"/>
                                            </td>
                                            <!--                                        <td t-if="display_discount"-->
                                            <!--                                            t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">-->
                                            <!--                                            <span class="text-nowrap" t-field="line.discount"/>-->
                                            <!--                                        </td>-->
                                            <td t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"
                                                      id="line_tax_ids"/>
                                            </td>
                                            <td class="text-end o_price_total">
                                                <span class="text-nowrap" t-field="line.price_subtotal"
                                                      groups="account.group_show_line_subtotals_tax_excluded"/>
                                                <span class="text-nowrap" t-field="line.price_total"
                                                      groups="account.group_show_line_subtotals_tax_included"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                        </t>
                                    </tr>

                                    <!--                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">-->
                                    <!--                                    <tr class="is-subtotal text-end">-->
                                    <!--                                        <td colspan="99">-->
                                    <!--                                            <strong class="mr16">Subtotal</strong>-->
                                    <!--                                            <span-->
                                    <!--                                                    t-esc="current_subtotal"-->
                                    <!--                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'-->
                                    <!--                                            />-->
                                    <!--                                        </td>-->
                                    <!--                                    </tr>-->
                                    <!--                                </t>-->
                                </t>
                            </tbody>
                        </table>

                        <div class="clearfix mb-4">
                            <div id="total" class="row">
                                <!--                                <div t-attf-class="#{'col-6'} ms-auto">-->
                                <!--                                    <p style="margin-top:0px;">-->
                                <!--                                        AMOUNT IN WORDS:-->
                                <!--                                        <br/>-->
                                <!--                                        <small class="text-muted lh-sm">-->
                                <!--                                            <span t-field="o.amount_total_words">Thirty one dollar and Five cents</span>-->
                                <!--                                        </small>-->
                                <!--                                    </p>-->

                                <!--                                    &lt;!&ndash;                                        <span>&ndash;&gt;-->
                                <!--                                    &lt;!&ndash;                                            <strong>Total</strong>&ndash;&gt;-->
                                <!--                                    &lt;!&ndash;                                        </span>&ndash;&gt;-->

                                <!--                                    &lt;!&ndash;                                        <span class="text-right">&ndash;&gt;-->
                                <!--                                    &lt;!&ndash;                                            <span t-esc="tax_totals['formatted_amount_total_rounded']"&ndash;&gt;-->
                                <!--                                    &lt;!&ndash;                                                  t-if="'formatted_amount_total_rounded' in tax_totals"/>&ndash;&gt;-->
                                <!--                                    &lt;!&ndash;                                            <span t-esc="tax_totals['formatted_amount_total']" t-else=""/>&ndash;&gt;-->
                                <!--                                    &lt;!&ndash;                                        </span>&ndash;&gt;-->

                                <!--                                </div>-->
                                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                                    <table class="table table-sm table-borderless" style="page-break-inside: avoid;">

                                        <!--Tax totals-->
                                        <t t-set="tax_totals" t-value="o.tax_totals"/>
                                        <t t-call="account.document_tax_totals"/>

                                        <!--Payments-->
                                        <t t-if="print_with_payments">
                                            <t t-if="o.payment_state != 'invoicing_legacy'">
                                                <t t-set="payments_vals"
                                                   t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"/>
                                                <t t-foreach="payments_vals" t-as="payment_vals">
                                                    <tr t-if="payment_vals['is_exchange'] == 0">
                                                        <td>
                                                            <i class="oe_form_field text-end oe_payment_label">Paid on
                                                                <t t-esc="payment_vals['date']"
                                                                   t-options='{"widget": "date"}'/>
                                                            </i>
                                                        </td>
                                                        <td class="text-end">
                                                            <span t-esc="payment_vals['amount']"
                                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                        </td>
                                                    </tr>
                                                </t>
                                                <t t-if="len(payments_vals) > 0">
                                                    <tr class="border-black fw-bold">
                                                        <td>Amount Due</td>
                                                        <td class="text-end">
                                                            <span t-field="o.amount_residual"/>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </t>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>


                </t>

            </t>
        </t>
    </template>
</odoo>