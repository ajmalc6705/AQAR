<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="agent_payment_search" model="ir.ui.view">
        <field name="name">agent.payment.search</field>
        <field name="model">agent.payment</field>
        <field name="arch" type="xml">
            <search>
                <field name="agent_payment_seq"/>
                <field name="source"/>
                <field name="partner_id"/>
                <field name="building_id"/>
            </search>
        </field>
    </record>
    <record id="property_agent_payment_tree" model="ir.ui.view">
        <field name="name">property.payment.tree</field>
        <field name="model">agent.payment</field>
        <field name="arch" type="xml">
            <tree default_order="agent_payment_seq desc" decoration-info="state == 'draft'"
                  decoration-muted="state == 'cancel'" decoration-success="state == 'confirm'"
            >
                <field name="agent_payment_seq"/>
                <field name="partner_id"/>
                <field name="agent_service_type"/>
                <field name="property_sale_id" optional="hide"/>
                <field name="property_service_id" optional="hide"/>
                <field name="property_lease_id" optional="hide"/>
                <field name="property_parking_id" optional="hide"/>
                <field name="building_id"/>
                <field name="unit_id" optional="hide"/>
                <field name="total_amount" sum="Total" digits="[12,3]"/>
                <field name="commission_percent" digits="[12,3]"/>
                <field name="commission_amount" sum="Commission" digits="[12,3]"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'"
                       decoration-muted="state == 'cancel'" decoration-success="state == 'confirm'"
                       decoration-warning="state in ('checked', 'verified')"
                />
                <field name="payment_state" optional="hide" widget="badge"
                       decoration-danger="payment_state == 'not_paid'"
                       decoration-warning="payment_state in ('partial', 'in_payment')"
                       decoration-success="payment_state in ('paid', 'reversed')"
                       attrs="{'invisible': [('payment_state', 'in', ('invoicing_legacy'))]}"/>
                <field name="company_id" readonly="1" optional="hide"/>
            </tree>
        </field>
    </record>
    <!--    Property Agent Payment Form View-->
    <record id="property_agent_payment_form" model="ir.ui.view">
        <field name="name">property.agent.payment.form</field>
        <field name="model">agent.payment</field>
        <field name="arch" type="xml">
            <form string="Agent Payment">
                <header>
                    <button name="action_button_send_to_authorizer" class="oe_highlight" states="draft"
                            string="Send To Authorizer" type="object"
                            groups="property_agent_payment.group_agent_payment_user_own"
                    />
                    <button name="action_button_verify" class="oe_highlight" states="checked"
                            string="Verify" type="object"
                            groups="property_agent_payment.group_agent_payment_user_authorizer"
                    />
                    <button name="action_confirm" class="oe_highlight" states="verified" string="Approve"
                            type="object" groups="property_agent_payment.group_agent_payment_user_approver"
                    />

                    <button name="button_action_send_back" states="checked"
                            string="Send Back" type="object"
                            groups="property_agent_payment.group_agent_payment_user_authorizer"
                    />
                    <button name="button_action_send_back" states="verified"
                            string="Send Back" type="object"
                            groups="property_agent_payment.group_agent_payment_user_approver"
                    />
                    <button name="action_create_bill" class="oe_highlight"
                            attrs="{'invisible': ['|',('is_create_bill', '=', True),('state','!=','confirm')]}"
                            string="Create Bill" type="object"
                            groups="account.group_account_user"
                    />
                    <button name="action_cancel" string="Cancel"
                            type="object"/>
                    <!--                     states="confirm,draft"-->
                    <button name="action_reset_draft" states="cancel,confirm"
                            string="Reset to Draft" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                </header>
                <sheet>
                    <!--                    <widget name="web_ribbon" title="Not Invoiced" bg_color="bg-danger"-->
                    <!--                            attrs="{'invisible': ['|',('invoiced_ribbon', '=', False),('state','!=','confirm')]}"/>-->
                    <!--                    <widget name="web_ribbon" title="Partial Invoiced" bg_color="bg-success"-->
                    <!--                            attrs="{'invisible': ['|',('partial_invoiced_ribbon', '=', False),('state','!=','confirm')]}"/>-->
                    <!--                    <widget name="web_ribbon" title="Fully Invoiced" bg_color="bg-success"-->
                    <!--                            attrs="{'invisible': ['|',('fully_invoiced_ribbon', '=', False),('state','!=','confirm')]}"/>-->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object"
                                name="action_bill" string="Bill" icon="fa-dollar"
                                attrs="{'invisible': [('is_create_bill', '=', False)]}"
                        />
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="agent_payment_seq" placeholder="e.g. Agent Payment"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="agent_service_type" dtring="Deal Type"
                                   attrs="{'readonly':['|',('state','not in',['draft']), ('property_lease_id', '=', True)]}"
                            />

                            <field name="property_sale_id"
                                   domain="[('is_agent_payment', '=', False),('agent_sale_created', '=', False)]"
                                   options="{'no_create': True, 'no_quick_create': True, 'no_edit': True}"
                                   attrs="{'invisible':[('agent_service_type','!=','property_sale')],'readonly':[('state','not in',['draft'])]}"
                            />

                            <field name="property_service_id"
                                   domain="[('is_agent_payment', '=', False),('agent_payment_created', '=', False)]"
                                   options="{'no_create': True, 'no_quick_create': True,  'no_edit': True}"
                                   attrs="{'invisible':[('agent_service_type','!=','property_service')],'readonly':[('state','not in',['draft'])]}"
                            />

                            <field name="property_lease_id"
                                   domain="[('is_agent_payment', '=', False),('agent_rent_created', '=', False)]"
                                   options="{'no_create': True, 'no_quick_create': True,'no_edit': True}"
                                   attrs="{'invisible':[('agent_service_type','!=','property_lease')],'readonly':['|',('state','not in',['draft']), ('property_lease_id', '=', True)]}"
                            />

                            <field name="property_parking_id"
                                   options="{'no_create': True, 'no_quick_create': True, 'no_edit': True}"
                                   domain="['&amp;',('state', '=', 'confirm'),('is_agent_payment', '=', False),('parking_agent_payment_created', '=', False)]"
                                   attrs="{'invisible':[('agent_service_type','!=','property_parking')],'readonly':[('state','not in',['draft'])]}"
                            />

                            <field name="total_amount" digits="[12,3]" force_save="1"
                                   attrs="{'readonly':['|',('state','not in',['draft']),('property_lease_id', '=', True)]}"
                            />
                            <field name="commission_percent" digits="[12,3]"
                                   attrs="{'readonly':[('state','not in',['draft'])]}"
                            />
                            <field name="commission_amount" digits="[12,3]"
                                   attrs="{'readonly':[('state','not in',['draft'])]}"
                            />
                        </group>
                        <group>
                            <field name="partner_id" readonly="1" force_save="1"
                                   options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_edit': True}"
                            />
                            <field name="building_id" readonly="1" force_save="1"
                                   options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_edit': True}"
                            />
                            <field name="unit_id" domain="[('id','in',unit_ids)]" readonly="1" force_save="1"
                                   options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_edit': True}"

                            />
                            <field name="unit_ids" invisible="1" force_save="1"/>
                            <field name="invoiced_ribbon" invisible="1"/>
                            <field name="partial_invoiced_ribbon" invisible="1"/>
                            <field name="fully_invoiced_ribbon" invisible="1"/>
                            <field name="is_create_bill" invisible="1"/>
                            <field name="source" invisible="1"/>
                            <field name="company_id" readonly="1" groups="base.group_multi_company"
                                   options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_edit': True}"
                            />
                        </group>

                    </group>
                    <notebook>
                        <page string="Agent Details" name="line">
                            <field name="agent_payment_ids" attrs="{'readonly':[('state','not in',['draft'])]}">
                                <tree string="Agent Details" editable="bottom">
                                    <field name="agent_id"
                                           context="{'default_company_id':company_id, 'default_is_property_agent':1,'show_address': 1}"
                                    />
                                    <field name="account_id" required="1"/>
                                    <field name="percentage" digits="[12,3]"/>
                                    <field name="amount_untaxed" digits="[12,3]"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="amount" digits="[12,3]"/>
                                    <field name="move_id" readonly="1" optional="hide"/>
                                    <field name="is_invoiced" invisible="1"/>
                                    <field name="payment_state" widget="badge"
                                           decoration-danger="payment_state == 'not_paid'"
                                           decoration-warning="payment_state in ('partial', 'in_payment')"
                                           decoration-success="payment_state in ('paid', 'reversed')"
                                           attrs="{'invisible': [('payment_state', 'in', ('invoicing_legacy'))]}"
                                    />
                                    <field name="invoice_state" widget="badge"
                                           decoration-success="invoice_state == 'posted'"
                                           decoration-info="invoice_state == 'draft'" optional="show"
                                    />
                                    <field name="company_id" readonly="1" invisible="1"
                                           options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_edit': True}"
                                    />
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_agent_payment" model="ir.actions.act_window">
        <field name="name">Agent Payments</field>
        <field name="res_model">agent.payment</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Property Agent Payment
            </p>
        </field>
    </record>
    <menuitem id="property_agent_payment_main_menu" name="Agent Payments"
              web_icon="property_agent_payment,static/description/odoo_icon.png"

    />
    <menuitem id="property_payment_menu" name="Agent Payments" parent="property_agent_payment_main_menu"
              action="action_agent_payment" sequence="30"
              groups="property_agent_payment.group_agent_payment_user_own,property_agent_payment.group_agent_payment_user_authorizer,property_agent_payment.group_agent_payment_user_approver"/>
    />
</odoo>