<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--    Property Agent Payment Form View-->
    <record id="account_move_property_agent_payment_form" model="ir.ui.view">
        <field name="name">account.move.inherit.property.agent.payment.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fiscal_position_id']" position="after">
                <field name="agent_payment_id" readonly="1"
                       groups="property_agent_payment.group_agent_payment_user_own"
                       options="{'no_create_edit':True, 'no_create':True}"
                       attrs="{'invisible':[('agent_payment_id','==',False)]}"
                />
            </xpath>

        </field>
    </record>

</odoo>