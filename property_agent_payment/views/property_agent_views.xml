<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_partner_form_inherit_agent_payment" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.agent.payment</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']/group" position="inside">
                <group name="Agent Payment" string="Agent Payment">
                    <field name="is_property_agent"
                           groups="property_agent_payment.group_agent_payment_user_own,property_agent_payment.group_agent_payment_user_authorizer,property_agent_payment.group_agent_payment_user_approver"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="action_agent" model="ir.actions.act_window">
        <field name="name">Agent Payment</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_property_agent', '=', True)]</field>
        <field name="context">{'default_is_property_agent': True,}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Agent Payment
            </p>
        </field>
    </record>
    <menuitem id="agents_menu" name="Agents" parent="property_agent_payment_main_menu"
              action="action_agent" sequence="60"
              groups="property_agent_payment.group_agent_payment_user_own,property_agent_payment.group_agent_payment_user_authorizer,property_agent_payment.group_agent_payment_user_approver"/>
    />
</odoo>