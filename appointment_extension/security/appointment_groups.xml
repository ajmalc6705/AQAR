   <record id="record_rule_calendar_event_user" model="ir.rule">
    <field name="name">Calendar Event User Rule</field>
    <field name="model_id" ref="model_calendar_event"/>
    <field name="domain_force">[('partner_ids', 'in', [user.partner_id.id])]</field>
    <field name="groups" eval="[(4, ref('group_appointment_user'))]"/>
    <field name="perm_read" eval="1"/>
    <field name="perm_write" eval="1"/>
    <field name="perm_create" eval="1"/>
    <field name="perm_unlink" eval="1"/>
</record>

<record id="record_rule_calendar_event_admin" model="ir.rule">
    <field name="name">Calendar Event Admin Rule</field>
    <field name="model_id" ref="model_calendar_event"/>
    <field name="groups" eval="[(4, ref('group_appointment_admin'))]"/>
    <field name="perm_read" eval="1"/>
    <field name="perm_write" eval="1"/>
    <field name="perm_create" eval="1"/>
    <field name="perm_unlink" eval="1"/>
</record>

