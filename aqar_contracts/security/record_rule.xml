<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--    Contract Rule-->
    <record id="user_rule" model="ir.rule">
        <field name="name">User Rule</field>
        <field name="model_id" ref="aqar_contracts.model_aqar_contract"/>
        <field name="active" eval="True"/>
        <field name="domain_force">[('user_ids','in',user.id)]
        </field>
        <field name="groups" eval="[(4, ref('aqar_contracts.group_contract_user'))]"/>
    </record>

    <record id="contract_categ_user_multi_company_rule" model="ir.rule">
        <field name="name">Contract Categ User multi-company</field>
        <field ref="model_aqar_contract_category" name="model_id"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

      <record id="contract_user_multi_company_rule" model="ir.rule">
        <field name="name">Contract User multi-company</field>
        <field ref="model_aqar_contract" name="model_id"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record id="all_user_rule" model="ir.rule">
        <field name="name">All Users Rule</field>
        <field name="model_id" ref="aqar_contracts.model_aqar_contract"/>
        <field name="active" eval="True"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('aqar_contracts.group_contract_user_all'))]"/>
    </record>
    <record id="admin_rule" model="ir.rule">
        <field name="name">Admin Rule</field>
        <field name="model_id" ref="aqar_contracts.model_aqar_contract"/>
        <field name="active" eval="True"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('aqar_contracts.group_contract_admin'))]"/>
    </record>
</odoo>