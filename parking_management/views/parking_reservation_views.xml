<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="parking_reservation_tree" model="ir.ui.view">
        <field name="name">parking.reservation.tree</field>
        <field name="model">parking.reservation</field>
        <field name="arch" type="xml">
            <tree default_order="parking_reservation_no desc" >
                <field name="parking_reservation_no"/>
                <field name="building_id"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>
    <!--    Parking Form View-->
    <record id="parking_reservation_form" model="ir.ui.view">
        <field name="name">parking.reservation.form</field>
        <field name="model">parking.reservation</field>
        <field name="arch" type="xml">
            <form string="Parking">
                <header>
                    <button name="action_done" class="oe_highlight" states="reserved" string="Confirm"
                            type="object"/>
                    <button name="action_reset_draft" states="sold,reserved,rent"
                            string="Reset to Draft" type="object"/>
                    <button name="action_reserve" class="oe_highlight" states="draft"
                            string="Reserve" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="parking_reservation_no" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="type_of_parking" widget="radio"
                                   attrs="{'readonly':[('state','not in',['draft'])]}"/>
                            <field name="building_id" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                            <field name="unit_ids" widget="many2many_tags"
                                   attrs="{'readonly':[('state','not in',['draft'])]}"/>
                        </group>
                        <group>
                            <field name="partner_id" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                            <field name="property_rent_id" attrs="{'invisible':[('type_of_parking','=','is_sale')]}"/>
                            <field name="lease_start_date" attrs="{'invisible':[('type_of_parking','=','is_sale')]}"/>
                            <field name="lease_end_date" attrs="{'invisible':[('type_of_parking','=','is_sale')]}"/>
                            <field name="amount_untaxed" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                            <field name="tax_ids" widget="many2many_tags"
                                   attrs="{'readonly':[('state','not in',['draft'])]}"/>
                            <field name="sales_price" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                            <field name="amount_total" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                            <field name="company_id" readonly="1"
                                   options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_edit': True}"
                            />
                            <!--                            groups="base.group_multi_company"-->
                        </group>
                    </group>
                    <notebook>
                        <page name="parking_slots" string="Parking Slots">
                            <field name="parking_slot_ids" domain="[('id', 'in', parking_ids)]" widget="one2many_list"
                                   attrs="{'readonly':[('state','not in',['draft'])]}">
                                <tree string="Parking Slot">
                                    <field name="parking_no"/>
                                    <field name="sales_price"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                            <field name="parking_ids" invisible="1"/>
                        </page>
                        <page name="Notes" String="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <!--    window action for Parking-->
    <record id="action_parking_reservation" model="ir.actions.act_window">
        <field name="name">Parking Reservation</field>
        <field name="res_model">parking.reservation</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Parking Reservation
            </p>
        </field>
    </record>
    <!--Parking Menu -->
    <menuitem id="parking_reservation_menu" name="Parking Reservation" parent="parking_main_menu"
              action="action_parking_reservation" sequence="30"/>
</odoo>