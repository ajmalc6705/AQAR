<odoo>
    <!--Leave Return Form-->
    <record id="view_hr_leave_return_form" model="ir.ui.view">
        <field name="name">hr_leave_return.form</field>
        <field name="model">hr.leave.return</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!--Buttons-->
                    <button name="approve"
                            string="Approve"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"
                    />
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,approved"/>
                </header>
                <sheet>
                    <h1>
                        <label for="name" class="oe_edit_only"/>
                        <field name="name" class="oe_inline" readonly="1"/>
                    </h1>
                    <group string="Employee Details">
                        <group>
                            <field name="employee_id" required="1" options='{"no_open": True, "no_create": True}'
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="designation" options='{"no_open": True, "no_create": True}'/>
                        </group>
                        <group>
                            <field name="department_id" options='{"no_open": True, "no_create": True}'/>
                        </group>
                    </group>
                    <group string="Leave Details">
                        <field name="leave_details" nolabel="1" context="{'default_employee_id': employee_id}"
                               attrs="{'readonly': [('state', 'in', ['approved', 'cancel'])]}" colspan="2" mode="tree">
                            <tree create="0" delete="0" default_order="date_to asc">
                                <field name="employee_id" invisible="1"/>
                                <field name="department_id" invisible="1"/>
                                <field name="holiday_status_id" string="Leave Type" class="font-weight-bold"/>
                                <field name="name"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="number_of_days" string="Duration"/>
                                <field name="state" invisible="1"/>
                                <field name="category_id" invisible="1"/>
                                <field name="user_id" invisible="1"/>
                            </tree>
                            <form>
                                <sheet>
                                    <group>
                                        <group>
                                            <field name="holiday_status_id" string="Leave Type" options='{"no_open": True, "no_create": True}'
                                                   class="font-weight-bold"/>
                                            <field name="name"/>
                                            <field name="employee_company_id" invisible="1"/>
                                        </group>
                                        <group>
                                            <field name="date_from"/>
                                            <field name="date_to"/>
                                            <field name="number_of_days" string="Duration"/>
                                        </group>
                                    </group>

                                </sheet>
                            </form>
                        </field>
                    </group>
                    <group string="Return Details">
                        <group>
                            <field name="mode" force_save="1" readonly="1"
                                   attrs="{'readonly': [('state', 'in', ['approved', 'cancel'])]}"/>
                            <field name="comp_leave" attrs="{'required': [('mode', '=', 'late')],
                            'readonly': [('state', 'in', ['approved', 'cancel'])],
                            'invisible': [('mode', '!=', 'late')]}" context="{'employee_id': employee_id}"/>
                        </group>
                        <group>
                            <field name="return_date" force_save="1" readonly="1"/>
                            <field name="rejoining_date" widget="date" attrs="{'readonly': [('state', 'in', ['approved', 'cancel'])]}"/>
                        </group>
                        <group>
                            <field name="excess_leave" force_save="1" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="remarks" attrs="{'readonly': [('state', 'in', ['approved', 'cancel'])]}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hr_leave_return_search" model="ir.ui.view">
        <field name="name">hr.leave.return.search</field>
        <field name="model">hr.leave.return</field>
        <field name="arch" type="xml">
            <search string="Leave Return">
                <field name="name" string="Form No."/>
                <field name="employee_id" string="Employees"
                       filter_domain="[('employee_id.name','ilike',self)]"/>
                <field name="mode" string="Mode"/>
                <group expand="0" string="Group By">
                    <filter domain="[('mode', '=', 'late')]" name="late" string="Late"/>
                    <filter domain="[('mode', '=', 'early')]" name="early"
                            string="Early"/>
                    <filter domain="[('mode', '=', 'on_time')]" name="on_time"
                            string="On Time"/>
                    <separator/>
                    <filter domain="[('state', '=', 'draft')]" name="draft" string="Draft"/>
                    <filter domain="[('state', '=', 'approved')]" name="approved"
                            string="Approved"/>
                    <filter name="group_employee" string="Employee" domain="[]"
                            context="{'group_by':'employee_id'}"/>
                    <filter name="group_mode" string="Mode" domain="[]" context="{'group_by':'mode'}"/>
                    <filter name="group_state" string="State" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_hr_leave_return_tree" model="ir.ui.view">
        <field name="name">hr_leave_return.tree</field>
        <field name="model">hr.leave.return</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="mode"/>
                <field name="return_date"/>
                <field name="state"/>
                <field name="company_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_leave_return" model="ir.actions.act_window">
        <field name="name">Leave Return</field>
        <field name="res_model">hr.leave.return</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hr_leave_return_search"/>
    </record>

    <menuitem id="menu_leave_return"
              parent="hr_holidays.menu_hr_holidays_root"
              name="Leave Return"
              action="action_leave_return"
              groups="atheer_hr.group_hr_manager,atheer_hr.group_hr_ceo"
              sequence="3"
    />
</odoo>
