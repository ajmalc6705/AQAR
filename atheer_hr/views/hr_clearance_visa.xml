<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_hr_clearance_form" model="ir.ui.view">
            <field name="name">hr.clearance.form</field>
            <field name="model">hr.clearance</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_visa_request"
                                class="oe_stat_button"
                                type="object"
                                string="Applications">
                            <field name="visa_applications" widget="statinfo"/>
                        </button>
                    </div>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <group string="Clearance Details" name="clearance_details">
                            <group>
                                <field name="date_issue" />
                                <field name="work_permit_duration" />
                                <field name="total" />
                                <field name="balance" />
                            </group>
                            <group>
                                <field name="date_expiry" />
                                <field name="labour_office" />
                                <field name="used" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Clearance Details" name="clearance_details">
                                <field name="clearance_lines" readonly="1">
                                    <tree string="Clearance Details" editable="bottom">
                                        <field name="job_code" />
                                        <field name="job_id" />
                                        <field name="total" />
                                        <field name="visa_total" />
                                        <field name="gender" />
                                        <button string="Visa" name="create_visa_request" type="object" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_clearance_tree" model="ir.ui.view">
            <field name="name">hr.clearance.tree</field>
            <field name="model">hr.clearance</field>
            <field name="arch" type="xml">
                <tree string="Clearance Details" sample="1">
                    <field name="name" />
                    <field name="date_issue" />
                    <field name="date_expiry" />
                    <field name="total" />
                    <field name="used" />
                    <field name="balance" />
                </tree>
            </field>
        </record>

        <record id="view_hr_clearance_request_form" model="ir.ui.view">
            <field name="name">hr.clearance.form</field>
            <field name="model">hr.clearance.request</field>
            <field name="arch" type="xml">
                <form>
                    <!--                    todo button access-->
                    <header>
                        <button string="Send to Section Head" type="object" name="sent_forward" states="draft" />
                        <button string="Send to PR Section" type="object" name="sent_forward" states="hr" />
                        <button string="Done" type="object" name="sent_forward" states="pr" />

                        <!--                        send back buttons-->
                        <button string="Send Back" type="object" name="sent_forward" states="hr" />
                        <button string="Send Back" type="object" name="sent_forward" states="pr" />
                        <field name="state" widget="statusbar" statusbar_visible="draft" />
                    </header>
                    <sheet>
                        <div class="oe_title" attrs="{'invisible': [('state', '=', 'draft')]}" >
                            <label for="name" string="Clearance Request"/>
                            <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <group string="Request Details">
                            <field name="date_issue" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="create_uid" readonly="1" />
                        </group>
                        <group string="Count Details">
                            <group>
                                <field name="total" />
                                <field name="used" />
                            </group>
                            <group>
                                <field name="total_issued" />
                                <field name="balance" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Clearance Details" name="clearance_details">
                                <field name="clearance_lines"
                                       attrs="{'invisible': [('state', 'not in', ('draft', 'hr'))]}">
                                    <tree string="Clearance Details" editable="bottom">
                                        <field name="job_code" />
                                        <field name="job_id" />
                                        <field name="division" />
                                        <field name="total_issued" />
                                        <field name="gender" />
                                        <field name="state" invisible="1" />
                                    </tree>
                                </field>
                                <field name="clearance_lines2"
                                       attrs="{'invisible': [('state', 'in', ('draft', 'hr'))]}">
                                    <tree string="Clearance Details" editable="bottom" create="0">
                                        <field name="job_code" readonly="1" />
                                        <field name="job_id" readonly="1" />
                                        <field name="division" readonly="1" />
                                        <field name="total_issued" readonly="1" />
                                        <field name="gender" readonly="1" />
                                        <field name="hr_clearance" />
                                        <field name="total" />
                                        <field name="state" invisible="1" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user" />
                        <!--                    <field name="activity_ids" />-->
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_clearance_request_tree" model="ir.ui.view">
            <field name="name">hr.clearance.tree</field>
