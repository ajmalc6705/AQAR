        <record id="view_hr_visa_cancellation_form" model="ir.ui.view">
            <field name="name">hr.visa.cancel.request</field>
            <field name="model">hr.visa.cancel.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Send to HR Head" type="object" name="sent_forward" states="draft"
                                groups="atheer_hr.group_hr_pa_admin" />
                        <button string="Send to PR Section" type="object" name="sent_forward" states="hr"
                                groups="atheer_hr.group_top_hr_manager" />
                        <button string="Done" type="object" name="sent_forward" states="pr"
                                groups="atheer_hr.group_pr_admin,atheer_hr.group_pr_hod" />

                        <!--                        send back buttons-->
                        <button string="Send Back" type="object" name="sent_backward" states="hr"
                                groups="atheer_hr.group_top_hr_manager" />
                        <button string="Send Back" type="object" name="sent_backward" states="pr"
                                groups="atheer_hr.group_pr_admin,atheer_hr.group_pr_hod" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,done" />
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <h1>
                                <field name="name" class="oe_inline" />
                            </h1>
                        </div>
                        <group string="Employee Details">
                            <group>
                                <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                       options="{'create_edit':false, 'create':false, 'no_open':true}"
                                       context="{'list_employee': True}" />
                                <field name="department_id"
                                       options="{'create_edit':false, 'create':false, 'no_open':true}" />
                                <field name="date_joining" />
                                <field name="passport_no" />
                                <field name="p_expiry" />
                            </group>
                            <group>
                                <label for="family_member" string="Family Members"/>
                                <div>
                                    <field name="family_member" class="oe_inline"
                                           attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                </div>
                                <field name="job_id" options="{'create_edit':false, 'create':false, 'no_open':true}" />
                                <field name="nationality" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                       options="{'create_edit':false, 'create':false, 'no_open':true}" />
                                <field name="p_issue_date" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name="visa_expiry" />
                            </group>
                        </group>
                        <group string="Other Details">
                            <group>
                                <field name="request_date" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name="last_working_date" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name="submitted_document" widget="many2many_tags"
                                       options="{'create_edit':true, 'create':true, 'no_open':true}"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            </group>
                            <group>
                                <field name="cancellation_reason" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name="departure_date" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            </group>
                        </group>
                        <group string="Assign Details"
                               attrs="{'invisible': [('state', '!=', 'pr'),('state', '!=', 'done')]}">
                            <group>
                                <field name="cancel_attachment"
                                       attrs="{'readonly': [('state', '!=', 'pr')],'required': [('state', '=', 'pr')]}" />
                                <field name="job_assigned" context="{'list_employee': True}"
                                       attrs="{'readonly': [('state', '!=', 'pr'),('state', '!=', 'done')],'required': [('state', '=', 'pr')]}" />
                            </group>
                            <group>
                                <field name="date_of_travel" attrs="{'readonly': [('state', '!=', 'pr')]}" />
                                <field name="job_finish_date"
                                       attrs="{'readonly': [('state', '!=', 'pr'),('state', '!=', 'done')],'required': [('state', '=', 'pr')]}" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

