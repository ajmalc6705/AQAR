        <record model="ir.ui.view" id="view_hr_clearance_details_search">
            <field name="name">Search view for Clearance Page</field>
            <field name="model">hr.clearance.details</field>
            <field name="arch" type="xml">
                <search string="Search Clearance Details">
                    <field name="hr_clearance" />
                    <field name="date_issue" />
                    <group expand="0" string="Group By">
                        <filter name="group_by_clearance" string="Clearance No." domain="[]"
                                context="{'group_by':'hr_clearance'}" />
                        <filter name="group_by_issue" string="Issue Date" domain="[]"
                                context="{'group_by':'date_issue'}" />
                        <filter name="group_by_expiry" string="Expiry Date" domain="[]"
                                context="{'group_by':'date_expiry'}" />
                        <filter name="group_by_job_code" string="Occupation Code" domain="[]"
                                context="{'group_by':'job_code'}" />
                        <filter name="group_by_job_id" string="Occupation " domain="[]"
                                context="{'group_by':'job_id'}" />
                        <filter name="group_by_division" string="Division " domain="[]"
                                context="{'group_by':'division'}" />
                    </group>
                </search>
            </field>
        </record>

