<odoo>

    <!--   inherit leave type form view-->
    <record id="edit_holiday_status_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.type.form</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='responsible_id']" position="attributes">
                <attribute name="required">0</attribute>
            </xpath>
<!--              <xpath expr="//field[@name='code']" position="attributes">-->
<!--                <attribute name="invisible">0</attribute>-->
<!--            </xpath>-->
<!--            <xpath expr="//group[@name='validity']" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->
<!--            <xpath expr="//field[@name='work_entry_type_id']" position="attributes">-->
<!--                <attribute name="required">1</attribute>-->
<!--            </xpath>-->
<!--            <xpath expr="//group[@name='allocation_validation']" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->
<!--            <xpath expr="//group[@name='notification']" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->
            <xpath expr="//group[@name='visual']" position="after">
                <group>
                    <group string="Configuration">
                        <field name="leave_days_type"/>
                        <field name="start_date"/>
                        <field name="restart_date" attrs="{'readonly':[('annual_leave','=',True)]}" force_save="1"/>
                        <field name="leave_reset"/>
                        <field name="default_for"/>
                        <field name="eligible_days_type" force_save="1" attrs="{'readonly':[('annual_leave','=',True)]}"/>
                        <field name="eligible_days"
                               attrs="{'readonly':[('annual_leave','=',True)],'invisible':[('eligible_days_type','!=','fixed')]}"/>
                    </group>
                    <group string="Leave Type Flags">
                        <field name="is_sick"/>
                        <field name="is_unpaid"/>
                        <field name="is_death_leave"/>
                        <field name="annual_leave"/>
                        <field name="is_emergency_leave"/>
                        <field name="is_muslim"/>
                        <field name="is_women"/>
                        <field name="is_omani"/>
                    </group>
                </group>
            </xpath>

            <xpath expr="//group[@name='leave_validation']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <!--    tree view leave type-->
    <!--   inherit leave type form view-->
    <record id="edit_holiday_status_tree_inherit" model="ir.ui.view">
        <field name="name">hr.leave.type.tree</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.view_holiday_status_normal_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="before">
                <field name="restart_date" force_save="1"/>
                <field name="eligible_days_type" force_save="1"/>
            </xpath>
<!--            <xpath expr="//field[@name='allocation_type']" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->
<!--            <xpath expr="//field[@name='leave_validation_type']" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->
<!--            <xpath expr="//field[@name='allocation_validation_type']" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->
<!--            <xpath expr="//field[@name='validity_start']" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->
<!--            <xpath expr="//field[@name='validity_stop']" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->
        </field>
    </record>

    <record id="hr_holidays.open_view_holiday_status" model="ir.actions.act_window">
        <field name="name">Leave Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.leave.type</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
</odoo>
