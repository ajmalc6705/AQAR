<odoo>
    <record id="view_hr_job_tree_inherit" model="ir.ui.view">
        <field name="name">hr.job.tree</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position='before'>
                <field name="occupation_code" />
            </xpath>
        </field>
    </record>

    <record id="view_hr_job_form_inherit" model="ir.ui.view">
        <field name="name">hr.job.form</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position='after'>
                <group>
                    <group>
                        <field name="occupation_code" force_save="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>