<odoo>
    <!--Leave Return Form-->

    <record id="view_hr_gratuity_form" model="ir.ui.view">
        <field name="name">hr.gratuity.form</field>
        <field name="model">hr.gratuity</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!--Buttons-->
                    <button name="approve"
                            string="Approve"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'hr')]}"
                    />
                    <field name="state" widget="statusbar"
                           statusbar_visible="hr,approved"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" nolabel="1" class="oe_edit_only" readonly="1"/>
                    </h1>
                    <field name="employee_category" widget="radio" options="{'horizontal': true}"/>
                    <group>
                        <group>
                            <field name="employee_id"/>
                        </group>
                        <group>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline"/>
                                -
                                <field name="date_to" class="oe_inline"/>
                            </div>
                        </group>
                    </group>
                    <group string="Employee Details">
                        <group>
                            <field name="designation"/>
                            <field name="joining_date"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="department"/>
                            <field name="contract_id"/>
                            <field name="basic_salary"/>
                            <field name="date" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                        </group>
                    </group>
                    <!--                    <group col="2">-->
                    <!--                        -->
                    <!--                    </group>-->
                    <group string="Gratuity Details">
                        <group>
                            <field name="gratuity_days"/>
                        </group>
                        <group>
                            <field name="gratuity_amount"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

