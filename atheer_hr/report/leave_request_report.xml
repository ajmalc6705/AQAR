<odoo>
    <data>
        <record id="paperformat_af_leave"
                model="report.paperformat">
            <field name="name">Employe A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">15</field>
            <field name="margin_right">15</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>
        <template id="report_print_leave_request">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="atheer_hr.af_external_layout">
                        <div class="oe_structure"/>
                        <table width="100%" style="padding:5px;font-size:15px;">
                            <tr>
                                <th width="10%"
                                    style="font-size:16px;border: 2px solid black;border-left: 0px solid white !important;border-top: 0px solid white !important;">
                                    <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)"
                                         style="max-height: 60px;" alt="Logo"/>
                                </th>
                                <th width="90%" style="border: 2px solid black;text-align: center;font-size:14px;">
                                    <h2>
                                        <strong>Leave Application</strong>
                                    </h2>
                                </th>
<!--                                <th colspan="1" style="padding:5px;border: 2px solid black;font-size:12px;">-->
<!--                                    <span t-esc="doc.reference"/>-->
<!--                                </th>-->
                            </tr>
                        </table>
                        <table width="100%" style="padding:5px;">
                            <tr>
                                <td width="20%;"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <strong>Emp Id No.</strong>
                                </td>
                                <td style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-esc="doc.employee_id.employee_id"/>
                                </td>
                            </tr>
                            <tr>
                                <td width="20%;"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <strong>Name</strong>
                                </td>
                                <td style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-esc="doc.employee_id.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <strong>Designation</strong>
                                </td>
                                <td style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-esc="doc.designation.name"/>
                                </td>
                            </tr>
                        </table>
                        <table width="100%" style="padding:5px;">
                            <tr>
                                <td rowspan="2" width="20%"
                                    style="vertical-align: middle;padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <strong>Leave Requested days</strong>
                                </td>
                                <td rowspan="2"
                                    style="vertical-align: middle;padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-esc="doc.number_of_days"/>
                                </td>
                                <td style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <strong>From Date</strong>
                                </td>
                                <td style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <strong>To Date</strong>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-esc="doc.request_date_from.strftime('%d-%m-%Y')"/>
                                </td>
                                <td style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-esc="doc.request_date_to.strftime('%d-%m-%Y')"/>
                                </td>
                            </tr>
                        </table>
                        <table width="100%" style="padding:5px;">
                            <tr>
                                <td width="20%;"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <strong>Description</strong>
                                </td>
                                <td colspan="3"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-esc="doc.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td width="20%;"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <strong>Employee's Signature</strong>
                                </td>
                                <td style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-esc="doc.name"/>
                                </td>
                                <td width="20%;"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <strong>Date</strong>
                                </td>
                                <td style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-esc="doc.date.strftime('%d-%m-%Y')"/>
                                </td>
                            </tr>
                            <tr>
                                <td width="20%;"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <strong>Approved Days</strong>
                                </td>
                                <td style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-esc="doc.number_of_days"/>
                                </td>
                                <td width="20%;"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <strong>Rejoining Date</strong>
                                </td>
                                <td style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-if="doc.rejoining_date">
                                        <t t-esc="doc.rejoining_date.strftime('%d-%m-%Y')"/>
                                    </t>
                                </td>
                            </tr>
                        </table>
                        <table width="100%" style="padding:5px;">
                            <tr>
                                <td height="20%"
                                    style="background-color:#52514d;padding:5px;font-size:12px;border-bottom: 2px Solid #000000 !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                </td>
                            </tr>
                        </table>
                        <t t-if="doc.annual_leave==True">
                            <table width="100%" style="padding:5px;border:1px  Solid #000000 !important;">
                                <tr>
                                    <td style="padding:5px;font-size:12px;">
                                        <span><strong>Leave Salary Paid</strong></span>
                                        <span style="margin-left:22%;">
                                            <t t-if="doc.leave_salary=='paid'">
                                                <label><strong>Yes</strong></label>
                                                <span>&#160;&#160;&#160;</span>
                                                <input type="checkbox" id="yes" checked="checked"/>
                                            </t>
                                            <t t-if="doc.leave_salary!='yes'">
                                                <label><strong>Yes</strong></label>
                                                <span>&#160;&#160;&#160;</span>
                                                <input type="checkbox" id="yes2"/>
                                            </t>
                                        </span>
                                    </td>
                                    <td style="padding:5px;font-size:12px;">
                                        <span style="margin-left:10%;">
                                            <t t-if="doc.leave_salary=='no'">
                                                <label><strong>No</strong></label>
                                                <span>&#160;&#160;&#160;</span>
                                                <input type="checkbox" id="yes" checked="checked"/>
                                            </t>
                                            <t t-if="doc.leave_salary!='yes'">
                                                <label><strong>No</strong></label>
                                                <span>&#160;&#160;&#160;</span>
                                                <input type="checkbox" id="yes2"/>
                                            </t>
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding:5px;font-size:12px;">
                                        <span><strong>Guarantors Required</strong></span>
                                        <span style="margin-left:12%;">
                                            <t t-if="doc.leave_salary=='paid'">
                                                <label><strong>Yes</strong></label>
                                                <span>&#160;&#160;&#160;</span>
                                                <input type="checkbox" id="yes" checked="checked"/>
                                            </t>
                                            <t t-if="doc.leave_salary!='yes'">
                                                <label><strong>Yes</strong></label>
                                                <span>&#160;&#160;&#160;</span>
                                                <input type="checkbox" id="yes2"/>
                                            </t>
                                        </span>
                                    </td>
                                    <td style="padding:5px;font-size:12px;">
                                        <span style="margin-left:10%;">
                                            <t t-if="doc.leave_salary=='no'">
                                                <label><strong>No</strong></label>
                                                <span>&#160;&#160;&#160;</span>
                                                <input type="checkbox" id="yes" checked="checked"/>
                                            </t>
                                            <t t-if="doc.leave_salary!='yes'">
                                                <label><strong>No</strong></label>
                                                <span>&#160;&#160;&#160;</span>
                                                <input type="checkbox" id="yes2"/>
                                            </t>
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </t>
                        <table width="100%" style="padding:5px;border:1px  Solid #000000 !important;">
                            <tr>
                                <td colspan="2" width="20%;"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                </td>
                                <td colspan="2" width="20%;"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-if="doc.line_manager_remark">
                                        <center>
                                            <t t-esc="doc.line_manager_remark"/>
                                        </center>
                                    </t>
                                </td>
                                <td colspan="2" width="20%;"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-if="doc.hr_remark">
                                        <center>
                                            <t t-esc="doc.hr_remark"/>
                                        </center>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" width="20%;" class="text-center"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-if="doc.emp_signature">
                                        <img t-att-src="image_data_uri(doc.emp_signature)" style="max-height: 3cm; max-width: 6cm;"/>
                                    </t>
                                </td>
                                <td colspan="2" width="20%;" class="text-center"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-if="doc.lm_signature">
                                        <img t-att-src="image_data_uri(doc.lm_signature)" style="max-height: 3cm; max-width: 6cm;"/>
                                    </t>
                                </td>
                                <td colspan="2" width="20%;" class="text-center"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <t t-if="doc.hr_signature">
                                        <img t-att-src="image_data_uri(doc.hr_signature)" style="max-height: 3cm; max-width: 6cm;"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" width="20%;"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <center>
                                        <strong>Employee</strong>
                                    </center>
                                </td>
                                <td colspan="2" width="20%;"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <center>
                                        <strong>Line Manager</strong>
                                    </center>
                                </td>
                                <td colspan="2" width="20%;"
                                    style="padding:5px;font-size:12px;border-bottom: 1px Solid !important;border-right: 1px Solid !important;border-left: 1px Solid !important;">
                                    <center>
                                        <strong>HR</strong>
                                    </center>
                                </td>
                            </tr>
                        </table>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
