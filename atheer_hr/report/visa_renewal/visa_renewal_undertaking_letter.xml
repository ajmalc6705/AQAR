<odoo>
    <data>
        <record id="paperformat_af_performance_evaluation" model="report.paperformat">
            <field name="name">Employe A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

         <record id="atr_visa_renewal_letter" model="ir.actions.report">
            <field name="name">Visa Renewal Undertaking Letter</field>
            <field name="model">performance.evaluation</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">atheer_hr.visa_renewal_letter</field>
            <field name="report_file">atheer_hr.visa_renewal_letter</field>
            <field name="print_report_name">"Visa Renewal Undertaking Letter"</field>
            <field name="paperformat_id" ref="paperformat_af_employe_performance_evaluation"/>
            <field name="binding_model_id" ref="model_performance_evaluation"/>
            <field name="binding_type">report</field>
        </record>

        <template id="visa_renewal_letter">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-if="doc.appraisal_for=='visa_renewal'">
                    <t t-call="atheer_hr.af_external_layout">
                        <div style="">
                            <div class="page" style="padding: 14px;">
                                <table width="100%" style="border:none;">
                                    <tr>
                                        <th colspan="3" style="text-align: center;">
                                            <h2 style="margin-top: 15px;font-family:'Serif Semi Bold'!important;">
                                                <font color="41689c">
                                                    <b>VISA RENEWAL UNDERTAKING LETTER</b>
                                                </font>
                                            </h2>
                                        </th>
                                        <th style="text-align: right;">
                                            <t t-set="company" t-value="request.env.company"/>
                                            <img t-if="company.report_image1"
                                                 t-att-src="image_data_uri(company.report_image1)"
                                                 style="max-height: 100px;margin-bottom: 20px;" alt="Logo"/>
                                        </th>
                                    </tr>
                                </table>
                                <br/>
                                <br/>
                                <div class="col-12 text-right" style="font-size:22px;width:100%">
                                    <strong>
                                        <span>Date</span>:
                                        <span t-esc="datetime.datetime.now().strftime('%d-%m-%Y')"/>
                                    </strong>
                                </div>
                                <div style="font-size:22px;width:100%">
                                    <br/>
                                    <br/>
                                    <p>
                                        <b>To,</b>
                                    </p>
                                    <p>
                                        <b>The HR,</b>
                                    </p>
                                    <p>
                                        <b>Atheer Real Estate</b>
                                    </p>
                                    <br/>
                                    <p style="text-align:center;">
                                        <u>
                                            <b>Subject : Acceptance for Visa Renewal</b>
                                        </u>
                                    </p>
                                    <p>I hereby wish to renew my visa for the next contract period of 2 years. If I fail
                                        to
                                        serve my contract period after renewing the visa, I assure to pay back the
                                        complete
                                        expense related to my visa. Hence I kindly request to renew my Visa.
                                    </p>
                                    <br/>
                                    <br/>
                                    <p>
                                        <b>Thanking You,</b>
                                    </p>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <span>
                                        <b>Name -</b>
                                    </span>
                                    <t t-esc="doc.employee_id.name"/>
                                    <br/>
                                    <br/>
                                    <span>
                                        <b>ID No. -</b>
                                    </span>
                                    <t t-esc="doc.employee_id.employee_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>