<odoo>
      <record id="paperformat_af_utility" model="report.paperformat">
            <field name="name">European A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>
    <template id="report_utility_approval">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="atheer_hr.af_external_layout">
                    <xpath expr="//div[@hasclass='header']" position="replace">
                        <div class="header">
                            <div class="col-12 row">
                                <div class="col-6 text-left">
                                    <img t-if="o.company_id.report_image1"
                                         t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.report_image1)"
                                         style="max-height: 75px;" alt="Logo"/>
                                </div>
                            </div>
                        </div>
                        <div class="footer"/>
                    </xpath>
                    <div class="page" style="padding: 14px;">
                        <h6 style="font-size:16px;font-family:'Serif Semi Bold'!important;text-align: center;margin-bottom: 40px;font-size: 28px;font-weight: bold;">
                            UTILITY APPROVAL
                        </h6>
                        <table width="100%" style="border:none;font-family: 'Roboto';">
                            <tr>
                                <td width="15%" style="font-size:14px;font-family: Sans Regular;border:none;">
                                    <strong>
                                        Bill Month
                                    </strong>
                                </td>
                                <td style="font-size:14px;font-family: Sans Regular;border:none;">:
                                    <t t-esc="o.bill_month"/>
                                </td>
                                <td width="15%" style="font-size:14px;font-family: Sans Regular;border:none;">
                                    <strong>
                                        Bill Year
                                    </strong>
                                </td>
                                <td style="font-size:14px;font-family: Sans Regular;border:none;">:
                                    <t t-esc="o.bill_year"/>
                                </td>
                            </tr>
                            <tr>
                                <td width="15%" style="font-size:14px;font-family: Sans Regular;border:none;">
                                    <strong>
                                        Bill Type
                                    </strong>
                                </td>
                                <td style="font-size:14px;font-family: Sans Regular;border:none;">:
                                    <t t-esc="o.bill_type"/>
                                </td>
                            </tr>
                        </table>
                        <br/>
                        <table style="width:100%;font-family: Roboto;font-size:14px;">
                            <tr>
                                <th style="width:15%;text-align: left;border-top: none;border-left: none;border-right: none;border-bottom: 2px solid #ddd;">
                                    Account Number
                                </th>
                                <th style="width:12%;text-align: left;border-top: none;border-left: none;border-right: none;border-bottom: 2px solid #ddd;">
                                    Account User
                                </th>
                                <th style="width:10%;text-align: left;border-top: none;border-left: none;border-right: none;border-bottom: 2px solid #ddd;">
                                    Net Payable Amount
                                </th>
                            </tr>
                            <tbody style="font-size:14px;">
                                <t t-foreach="o.other_bill_ids" t-as="line">
                                    <tr>
                                        <td style="text-align:left;border-top:none;border-left: none;border-right: none;border-bottom:1px solid #ddd;">
                                            <span t-if="line['acc_no']" t-esc="line['acc_no']"/>
                                        </td>
                                        <td style="text-align:left;border-top:none;border-left: none;border-right: none;border-bottom:1px solid #ddd;">
                                            <span t-if="line['acc_user']" t-esc="line['acc_user']"/>
                                        </td>
                                        <td style="text-align:left;border-top:none;border-left: none;border-right: none;border-bottom:1px solid #ddd;">
                                            <span t-if="line['net_payable_amount']" t-esc="line['net_payable_amount']"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <br/>
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-3' if report_type != 'html' else 'col-sm-7 col-sm-6'} ml-auto">
                                <table class="table table-sm" style="font-size:14px;page-break-inside: avoid;">
                                    <tr class="border-black o_subtotal" style="">
                                        <td>
                                            <strong>Total Amount</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.total_amount"
                                                  t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <br/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_utility_approval" model="ir.actions.report">
        <field name="name">Utility Approval</field>
        <field name="model">utility.approval</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">atheer_hr.report_utility_approval</field>
        <field name="report_file">atheer_hr.report_utility_approval</field>
         <field name="paperformat_id" ref="paperformat_af_utility"/>
        <field name="print_report_name">'Utility Approval-%s' %(time.strftime('%d-%m-%Y'))</field>
        <field name="binding_model_id" eval="False"/>
        <field name="attachment_use">False</field>
    </record>
</odoo>