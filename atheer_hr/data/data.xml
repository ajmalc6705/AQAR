        <record id="cron_update_ph_weekend_compensation" model="ir.cron">
            <field name="name">Update Compensation Leave</field>
            <field name="model_id" ref="model_public_holidays"/>
            <field name="state">code</field>
            <field name="code">model.update_compensation_leave()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="False"/>
            <field name="doall" eval="True"/>
        </record>


