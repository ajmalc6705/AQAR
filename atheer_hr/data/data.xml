    <!-- Notification duration data -->
    <data>
        <record id="notification_duration_2_months" model="notification.duration">
            <field name="name">2</field>
            <field name="duration">2</field>
            <field name="period">months</field>
        </record>
    </data>

    <data>
        <!-- activities -->
        <record id="mail_act_employee_doc_expiry" model="mail.activity.type">
            <field name="name">Expiry Notification</field>
            <field name="icon">fa-sun-o</field>
            <field name="res_model">hr.employee</field>
        </record>
        <record id="mail_act_payslip_to_hr_manager" model="mail.activity.type">
            <field name="name">Send to Hr Manager</field>
            <field name="icon">fa-sun-o</field>
            <field name="res_model">hr.payslip</field>
        </record>
        <record id="mail_act_payslip_to_accounts" model="mail.activity.type">
            <field name="name">Send to Accounts</field>
            <field name="icon">fa-sun-o</field>
            <field name="res_model">hr.payslip</field>
        </record>
        <record id="mail_act_payslip_to_accounts" model="mail.activity.type">
            <field name="name">Send to Accounts</field>
            <field name="icon">fa-sun-o</field>
            <field name="res_model">hr.payslip</field>
        </record>
        <record id="mail_act_payslip_run_notifications" model="mail.activity.type">
            <field name="name">Status Notifications</field>
            <field name="icon">fa-sun-o</field>
            <field name="res_model">hr.payslip.run</field>
        </record>

        <!--        Server action-->
        <record model="ir.actions.server" id="action_sent_to_ceo">
            <field name="name">Send to CEO</field>
            <field name="model_id" ref="atheer_hr.model_increment_and_promotion"/>
            <field name="binding_model_id" ref="atheer_hr.model_increment_and_promotion"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                action = records.send_to_ceo()
            </field>
        </record>

        <record model="ir.actions.server" id="action_approve_hr">
            <field name="name">Approve Hr</field>
            <field name="model_id" ref="atheer_hr.model_increment_and_promotion"/>
            <field name="binding_model_id" ref="atheer_hr.model_increment_and_promotion"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                action = records.approve_hr()
            </field>
        </record>

    </data>

    <data>
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'hr_holidays'), ('name', '=', 'holiday_status_unpaid')]" />
            </function>
            <value eval="{'noupdate': False}" />
        </function>

        <record id="hr_holidays.holiday_status_unpaid" model="hr.leave.type">
            <field name="request_unit">day</field>
        </record>

<!--        <record id="hr_holidays.holiday_status_comp" model="hr.leave.type">-->
<!--            <field name="request_unit">day</field>-->
<!--        </record>-->

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'hr_holidays'), ('name', '=', 'holiday_status_unpaid')]" />
            </function>
            <value eval="{'noupdate': True}" />
        </function>
    </data>
