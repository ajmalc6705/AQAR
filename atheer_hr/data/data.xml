<odoo>
    <!-- Cron -->
    <data>
        <record id="hr_payroll.decimal_payroll" model="decimal.precision">
            <field name="digits">3</field>
        </record>


        <record id="update_employee_info_increment" model="ir.cron">
            <field name="name">Increment and promotion</field>
            <field name="model_id" ref="model_increment_and_promotion"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_employee_info()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="True"/>
        </record>

        <!-- Employee excessive annual leave (annual leave balance > 60)-->
        <record id="notify_emp_excessive_annual_leave" model="ir.cron">
            <field name="name">Employee Excessive Annual Leave</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.notify_employee_annual_leave()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="True"/>
        </record>

        <!-- Employee documents expiry-->
        <record id="notify_employee_doc_expiration" model="ir.cron">
            <field name="name">Employee Document Expiration</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.notify_employee_doc_expiry()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="True"/>
        </record>

        <!--        employee resignation: cron job-->
        <record id="employee_resignation" model="ir.cron">
            <field name="name">Employee Resignation</field>
            <field name="model_id" ref="model_hr_resignation"/>
            <field name="state">code</field>
            <field name="code">model.cron_resignation()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="True"/>
        </record>
        <!--        payroll hold release-->
        <record id="payroll_hold_release" model="ir.cron">
            <field name="name">Payroll Hold Release</field>
            <field name="model_id" ref="model_hr_payroll_hold"/>
            <field name="state">code</field>
            <field name="code">model.cron_release()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="True"/>
        </record>

        <record id="cron_annual_leave_allocation" model="ir.cron">
            <field name="name">Annual Leave Calculations</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.annual_leave_cron()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
            <field name="priority" eval="1"/>
        </record>

        <record id="cron_leave_allocation_yearly" model="ir.cron">
            <field name="name">Yearly Leave Allocation</field>
            <field name="model_id" ref="model_hr_leave_allocation"/>
            <field name="state">code</field>
            <field name="code">model.allocate_leaves_annually()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>


