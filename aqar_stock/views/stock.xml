<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_stock_move_line_detailed_operation_tree_malatan" model="ir.ui.view">
            <field name="name">stock.move.line.operations.tree.malatan</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_id']" position="before">
                    <field name="qty_available" optional="show"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="stock_picking_form_inherit">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="return_reason"/>
                </field>
                <xpath expr="/form/sheet/notebook/page[@name='operations']/field[@name='move_ids_without_package']/tree/field[@name='quantity_done']"
                       position="before">
                    <field name="return_reason"/>
                </xpath>

            </field>
        </record>

        <record id="view_stock_return_picking_inherit" model="ir.ui.view">
            <field name="name">view.stock.return.picking.inherit</field>
            <field name="model">stock.return.picking</field>
            <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/field[@name='product_return_moves']" position="before">
                    <group>
                        <group>
                            <field name="return_reason" string="Return Reason" placeholder="return reason"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
