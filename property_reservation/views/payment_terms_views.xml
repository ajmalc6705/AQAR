<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="payment_term_tree" model="ir.ui.view">
        <field name="name">payment.term.tree</field>
        <field name="model">payment.term</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record id="payment_term_form" model="ir.ui.view">
        <field name="name">payment.term.form</field>
        <field name="model">payment.term</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>
    <record id="action_payment_terms" model="ir.actions.act_window">
        <field name="name">Payment Term</field>
        <field name="res_model">payment.term</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Payment Term
            </p>
        </field>
    </record>
    <menuitem id="payment_term_menu" name="Payment Term" parent="crm.crm_menu_config"
              action="action_payment_terms" sequence="90"/>
</odoo>