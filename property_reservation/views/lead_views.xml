<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="crm_lead_view_form" model="ir.ui.view">
        <field name="name">crm.lead.view.form.inherit.property.reservation</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_sale_quotations_new']" position="after">
                <button name="action_property_reservation" class="oe_highlight" string="New Reservation"
                        groups="property_reservation.group_reservation_user_own"
                        attrs="{'invisible':[('is_create_reservation', '=', True)]}" type="object"/>
            </xpath>
            <xpath expr="//button[@name='action_schedule_meeting']" position="after">
                <button type="object" name="action_view_reservation" class="oe_stat_button" icon="fa-puzzle-piece"
                        string="Reservation" attrs="{'invisible': [('is_create_reservation', '=', False)]}">
                </button>
            </xpath>
            <xpath expr="//field[@name='phone']" position="after">
                <field name="is_create_reservation" invisible="1"/>
                <field name="reservation_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>