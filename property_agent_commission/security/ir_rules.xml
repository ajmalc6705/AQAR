        <field name="name">Agent Payment Multi company rules</field>
        <field name="model_id" ref="model_agent_payment"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="agent_payment_lines_mult_company_rule" model="ir.rule">
        <field name="name">Agent Payment line Multi company rules</field>
        <field name="model_id" ref="model_agent_payment_line"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>


</odoo>
