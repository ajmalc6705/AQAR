<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="agent_commission_search" model="ir.ui.view">
        <field name="name">agent.commission.search</field>
        <field name="model">agent.commission</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"
                       filter_domain="['|', '|', ('name', 'ilike', self), ('partner_id', 'ilike', self), ('company_id', 'ilike', self)]"
                />
                <field name="partner_id"
                       filter_domain="['|', '|', ('partner_id', 'ilike', self), ('name', 'ilike', self), ('company_id', 'ilike', self)]"
                />
                <field name="company_id"/>
                <group string="Group By">
                    <filter name="partner_id" string="Agent" context="{'group_by':'partner_id'}"/>
                    <filter name="company_id" string="Company" context="{'group_by':'company_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="property_agent_commission_tree" model="ir.ui.view">
        <field name="name">agent.commission.tree</field>
        <field name="model">agent.commission</field>
        <field name="arch" type="xml">
            <tree default_order="name desc" decoration-info="state == 'draft'" decoration-success="state == 'done'"
            >
                <field name="name"/>
                <field name="partner_id"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'"
                       decoration-success="state == 'confirm'"

                />
                <field name="company_id" readonly="1" optional="hide"/>
            </tree>
        </field>
    </record>

    <!--    Property Agent Commission Form View-->
    <record id="property_agent_commission_form" model="ir.ui.view">
        <field name="name">property.agent.commission.form</field>
        <field name="model">agent.commission</field>
        <field name="arch" type="xml">
            <form string="Agent Commission">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>

                    <button name="button_action_confirm" class="oe_highlight" states="draft" string="Confirm"
                            type="object"
                            groups="property_agent_payment.group_agent_payment_user_own,property_agent_payment.group_agent_payment_user_authorizer,property_agent_payment.group_agent_payment_user_approver"/>
                    />


                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Agent Commission Sequence"/>
                        </h1>
                    </div>
                    <group>

                        `
                        <group>
                            <field name="partner_id"
                                   options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_edit': True}"
                            />
                            <field name="company_id" readonly="1" groups="base.group_multi_company"
                                   options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_edit': True}"
                            />
                        </group>

                    </group>
                    <notebook>
                        <page string="Commission Details" name="commission_line">
                            <field name="commission_line_ids" attrs="{'readonly':[('state','not in',['draft'])]}">
                                <tree string="Commission Details" editable="bottom">
                                    <field name="partner_id" invisible="1"
                                           context="{'default_company_id':company_id, 'default_is_property_agent':1,'show_address': 1}"
                                    />
                                    <field name="agent_service_type" dtring="Deal Type" required="1"
                                           attrs="{'readonly':[('state','not in',['draft'])]}"
                                    />
                                    <field name="description" required="1"
                                           attrs="{'readonly':[('state','not in',['draft'])]}"
                                    />
                                    <field name="calculation_type" required="1"
                                           attrs="{'readonly':[('state','not in',['draft'])]}"
                                    />
                                    <field name="commission_amount" required="1"
                                           attrs="{'readonly':[('state','not in',['draft'])]}"
                                           widget="monetary" options="{'currency_field': 'currency_id'}"
                                    />
                                    <field name="attachment_ids" required="1" widget="many2many_binary"
                                           attrs="{'readonly':[('state','not in',['draft'])]}"
                                    />
                                    <field name="currency_id" optional="hide" readonly="1"
                                    />
                                    <field name="state" widget="badge" optional="hide"
                                           decoration-info="state == 'draft'" decoration-success="state == 'confirm'"
                                    />
                                    <field name="company_id" readonly="1" invisible="1"
                                           options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_edit': True}"
                                    />
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_agent_commission_details" model="ir.actions.act_window">
        <field name="name">Agent Commission Details</field>
        <field name="res_model">agent.commission</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_property_agent': True,}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Commission found. Let's create one!
            </p>
            <p>
                Agent Commission Details
            </p>
        </field>
    </record>

    />
    <menuitem id="property_commission_menu" name="Agent Commission" action="action_agent_commission_details"
              parent="property_agent_payment.property_agent_payment_main_menu"
              sequence="100"
              groups="property_agent_payment.group_agent_payment_user_own,property_agent_payment.group_agent_payment_user_authorizer,property_agent_payment.group_agent_payment_user_approver"/>
    />
</odoo>