<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="helpdesk_ticket_complaint_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.complaint.view.form.inherit.crm</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[3]" position="attributes">
                    <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_name']" position="attributes">
                    <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='properties']" position="attributes">
                    <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='email_cc']" position="after">
                <field name="building_id"/>
                <field name="property_id"/>
                <field name="complaint_id" readonly="1"/>
                <field name="is_complaint_created" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='assign_ticket_to_self']" position="after">
                <button class="btn-primary" name="action_create_complaints" type="object" string="Create Complaints"
                        attrs="{'invisible': [('is_complaint_created', '=', True)]}"
                />
            </xpath>
            <xpath expr="//button[@name='action_open_helpdesk_ticket']" position="before">
                <button class="oe_stat_button" name="action_view_complaints" type="object" string="Complaints"
                        attrs="{'invisible': [('is_complaint_created', '=', False)]}">
                </button>
            </xpath>
        </field>
    </record>
</odoo>