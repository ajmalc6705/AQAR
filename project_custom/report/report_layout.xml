<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="munanoor_external_layout">
            <t t-if="not o" t-set="o" t-value="doc" />
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id" />
                </t>
                <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                    <t t-set="company" t-value="o.company_id.sudo()" />
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company" />
                </t>
            </t>
            <t t-call="project_custom.munanoor_external_layout_details">
                <t t-raw="0" />
            </t>
        </template>

        <template id="munanoor_external_layout_details">
            <div class="header">
                <div class="row">
                    <div class="col-11 text-center">
                        <h2>
                            <span style="direction: rtl;" dir="rtl">منى نور العالمية ش</span>
                            <br />
                            <span>MUNA NOOR INTERNATIONAL LLC</span>
                            <!--                            <span t-esc="company.name.upper()"/>-->
                        </h2>
                    </div>
                    <div class="col-1 mb4">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 60px;"
                             alt="Logo" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-12" style="text-align:center;">
                        <!--                        <t t-if="company.phone">Tel:-->
                        <!--                            <span t-field="company.phone"/>-->
                        <!--                        </t>-->
                        <!--                        <br/>-->
                        <!--                        <t t-if="company.email">E-mail:-->
                        <!--                            <span t-field="company.email"/>-->
                        <!--                        </t>-->
                        <div>Tel. : +968 24590310/3665/3701/3158/59. Fax : +968 24590760</div>
                        <div>E-mail : sales.pcd@mni-llc.com, www.mni-llc.com</div>
                    </div>
                </div>
            </div>
            <div class="article">
                <t t-raw="0" />
            </div>
            <div class="footer">
            </div>
        </template>

    </data>
</odoo>
