<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_project_work_slip">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="project_custom.munanoor_external_layout">
