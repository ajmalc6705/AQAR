<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="inherit_res_user_form_view" model="ir.ui.view">
            <field name="name">res users form view inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='access_rights']/group[1]" position="after">
                    <group name="Customer Typed">
                        <field name="customer_type_ids" widget="many2many_tags" options="{'no_create_edit': True,'no_create': True,}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="tree_contact_category_view" model="ir.ui.view">
            <field name="name">tree contact category view</field>
            <field name="model">customer.type</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_partner_category" model="ir.actions.act_window">
            <field name="name">Contact Category</field>
            <field name="res_model">customer.type</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="menu_contact_category"
                  action="aqar_contacts.action_partner_category"
                  name="Contact Category" parent="contacts.res_partner_menu_config"
                  sequence="3"/>

    </data>
</odoo>
