<odoo>
    <!--    Mailing Marketing Rule-->
    <record id="email_marketing_user_rule" model="ir.rule">
        <field name="name">Email Marketing User Rule</field>
        <field name="model_id" ref="model_mailing_mailing"/>
        <field name="active" eval="True"/>
        <field name="domain_force">['|',('user_ids','=',False),('user_ids','in',user.id)]
