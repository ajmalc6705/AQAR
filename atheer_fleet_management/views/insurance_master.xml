<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- master_insurance_views.xml -->
        <record id="view_master_insurance_tree" model="ir.ui.view">
            <field name="name">master.insurance.tree</field>
            <field name="model">master.insurance</field>
            <field name="arch" type="xml">
                <tree string="Master Insurance Tree View">
                    <field name="name"/>
                    <field name="policy_number"/>
                    <field name="type_of_insurance"/>
                    <field name="insurance_company"/>
                    <field name="issue_date"/>
                    <field name="expiry_date"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_master_insurance_form" model="ir.ui.view">
            <field name="name">master.insurance.form</field>
            <field name="model">master.insurance</field>
            <field name="arch" type="xml">
                <form string="Master Insurance Form">
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="vehicle_id" required="1"/>
                                <field name="policy_number" required="1"/>
                                <field name="type_of_insurance"/>
                                <field name="insurance_company"/>
                            </group>
                            <group>
                                <field name="issue_date"/>
                                <field name="expiry_date"/>
                                <field name="insurance_value"/>
                                <field name="company_id"/>
                            </group>

                        </group>
                        <notebook>
                            <page string="Documents" name="atheer_documents">
                                <field name="document_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="doc_type"/>
                                        <field name="issue_date" required="1"/>
                                        <field name="expiry_date" required="1"/>
                                        <field name="doc_dec"/>
                                        <field name="attachment_ids" widget="many2many_binary"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="action_master_insurance" model="ir.actions.act_window">
            <field name="name">Master Insurance</field>
            <field name="res_model">master.insurance</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No data yet!
                </p>
                <p>
                    Create New Insurance
                </p>
            </field>

        </record>
        <menuitem id="menu_master_insurance" name="Insurance"
                  parent="atheer_fleet_management.menu_master_masters"
                  sequence="40"
                  action="action_master_insurance"/>
    </data>
</odoo>
