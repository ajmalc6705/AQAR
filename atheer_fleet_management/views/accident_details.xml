<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_accident_details_form" model="ir.ui.view">
            <field name="name">accident.details.form</field>
            <field name="model">accident.details</field>
            <field name="arch" type="xml">
                <form string="Accident Details">
                    <header>
                        <button string="Confirm" name="confirm" type="object" states="draft" class="oe_highlight"/>
                        <button string="Reset to Draft" name="reset_to_draft" type="object" states="done"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="vehicle" required="1" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="vin_sn" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="number_plate" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="km_reading"
                                       attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="accident_date" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="driver" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="company_id" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                            </group>
                            <group>
                                <field name="insurance_amount" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="cash_by_employee" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="cash_by_company" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                            </group>
                            <group>
                                <field name="attachment_ids" widget="many2many_binary"
                                       attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                            </group>
                            <group>
                                <field name="company_name" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="claim_number" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="claim_type" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Image" name="images">
                                <group>
                                    <group>
                                        <field name="accident_image_128"
                                               widget="image"
                                               attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                    </group>
                                    <group>
                                        <field name="repair_image_128"
                                               widget="image"
                                               attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Info" name="remarks_page">
                                <group>
                                    <group>
                                        <field name="vehicle_condition"
                                               attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                    </group>
                                    <group>
                                        <field name="description" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                    </group>
                                    <group>
                                        <field name="remarks" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_accident_details_tree" model="ir.ui.view">
            <field name="name">accident.details.tree</field>
            <field name="model">accident.details</field>
            <field name="arch" type="xml">
                <tree string="Accident Detailss">
                    <field name="name"/>
                    <field name="vehicle"/>
                    <field name="vin_sn"/>
                    <field name="number_plate"/>
                    <field name="accident_date"/>
                    <field name="company_id" optional="hide"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="action_accident_details" model="ir.actions.act_window">
            <field name="name">Accident Details</field>
            <field name="res_model">accident.details</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="atheer_fleet_management.view_accident_details_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No data yet!
                </p>
                <p>
                    Create Accident Details
                </p>
            </field>

        </record>
        <menuitem id="menu_accident_details" name="Accident Details" parent="fleet.fleet_vehicles"
                  sequence="15"
                  action="action_accident_details"/>
    </data>
</odoo>
