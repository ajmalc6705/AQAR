<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_master_vehicle_tyres_form" model="ir.ui.view">
            <field name="name">master.vehicle.tyres.form</field>
            <field name="model">master.vehicle.tyres</field>
            <field name="arch" type="xml">
                <form string="Master Vehicle Tyres Form">
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="vehicle_id" required="1"/>
                                <field name="tyre_size"/>
                                <field name="brand"/>
                                <field name="purchase_date"/>
                            </group>
                            <group>
                                <field name="warranty_upto"/>
                                <field name="year_of_manufacture"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_master_vehicle_tyres_tree" model="ir.ui.view">
            <field name="name">master.vehicle.tyres.tree</field>
            <field name="model">master.vehicle.tyres</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="vehicle_id"/>
                    <field name="tyre_size"/>
                    <field name="brand"/>
                    <field name="purchase_date"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>
        <record id="action_master_vehicle_tyres" model="ir.actions.act_window">
            <field name="name">Master Vehicle Tyres</field>
            <field name="res_model">master.vehicle.tyres</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="atheer_fleet_management.view_master_vehicle_tyres_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No data yet!
                </p>
                <p>
                    Create Tyres data
                </p>
            </field>

        </record>
        <menuitem id="menu_master_vehicle_tyres" name="Vehicle Tyres"
                  parent="atheer_fleet_management.menu_master_masters"
                  sequence="50"
                  action="action_master_vehicle_tyres"/>
    </data>
</odoo>
