<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_vehicle_inspection_form" model="ir.ui.view">
            <field name="name">vehicle.inspection.form</field>
            <field name="model">vehicle.inspection</field>
            <field name="arch" type="xml">
                <form string="Vehicle Inspection">
                    <header>
                        <button string="Confirm" name="confirm" type="object" states="draft" class="oe_highlight"/>
                        <button string="Reset to Draft" name="reset_to_draft" type="object" states="done"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="vehicle" required="1" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="odometer_reading" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="inspection_date" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="inspected_by" required="1"
                                       attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="driver" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                            </group>
                            <group>
                                <field name="images"/>
                                <field name="condition" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="description" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="company_id" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Remarks" name="remarks_page">
                                <field name="remarks" required="1" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_vehicle_inspection_tree" model="ir.ui.view">
            <field name="name">vehicle.inspection.tree</field>
            <field name="model">vehicle.inspection</field>
            <field name="arch" type="xml">
                <tree string="Vehicle Inspections">
                    <field name="name"/>
                    <field name="vehicle"/>
                    <field name="inspection_date"/>
                    <field name="inspected_by"/>
                    <field name="company_id" optional="hide"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="action_vehicle_inspection" model="ir.actions.act_window">
            <field name="name">Vehicle Inspection</field>
            <field name="res_model">vehicle.inspection</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="atheer_fleet_management.view_vehicle_inspection_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No data yet!
                </p>
                <p>
                    Create New Inspection
                </p>
            </field>

        </record>
        <menuitem id="menu_vehicle_inspection" name="Vehicle Inspection" parent="fleet.fleet_vehicles"
                  sequence="9"
                  action="action_vehicle_inspection"/>
    </data>
</odoo>
