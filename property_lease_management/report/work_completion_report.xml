            <field name="name">Work Completion Report</field>
            <field name="model">property.maintenance</field>
            <field name="report_type">qweb-pdf</field>
            <field name="print_report_name">'Work Completion Report-%s' %(time.strftime('%d-%m-%Y'))</field>
            <field name="report_name">property_lease_management.work_completion_report_template</field>
