<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <!--        paper format forcancellation report-->
        <record id="paperformat_cancellation" model="report.paperformat">
            <field name="name">Cancellation</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">15</field>
            <field name="margin_right">15</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">80</field>
        </record>

        <record id="cancellation_form_report" model="ir.actions.report">
            <field name="name">Cancellation Form</field>
            <field name="model">property.checklist.takeover</field>
            <field name="report_type">qweb-pdf</field>
            <field name="print_report_name">'Cancellation form'</field>
            <field name="report_name">property_lease_management.cancellation_form_report_template</field>
            <field name="report_file">property_lease_management.cancellation_form_report_template</field>
            <field name="paperformat_id" ref="property_lease_management.paperformat_cancellation"/>
            <field name="binding_model_id" ref="model_property_checklist_takeover"/>
            <field name="binding_type">report</field>

        </record>

