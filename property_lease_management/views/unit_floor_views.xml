<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <record id="view_property_building_unit_floor_tree" model="ir.ui.view">
            <field name="name">unit.floor.tree</field>
            <field name="model">unit.floor</field>
            <field name="arch" type="xml">
                <tree string="Buildings" sample="1" editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_unit_floor_window" model="ir.actions.act_window">
            <field name="name">Floors</field>
            <field name="res_model">unit.floor</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to create a New Floor.
                </p>
            </field>
        </record>

    <menuitem id="menu_property_unit_floor" action="action_unit_floor_window" parent="menu_property" sequence="10"/>


</odoo>