<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_property_bounced_cheque_tree" model="ir.ui.view">
            <field name="name">property.bounced.cheque.tree</field>
            <field name="model">property.bounced.cheque</field>
            <field name="arch" type="xml">
                <tree string="Bounced Cheque" sample="1" create="false" edit="false" delete="false">
                    <field name="cheque_number"/>
                    <field name="date"/>
                    <field name="amount"/>
                    <field name="remarks"/>
                    <field name="tenant_id"/>
                    <field name="period_ids"/>
                    <field name="paid"
                           decoration-success="paid == True"
                           widget="badge" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="view_property_bounced_cheque_form" model="ir.ui.view">
            <field name="name">property.bounced.cheque.form</field>
            <field name="model">property.bounced.cheque</field>
            <field name="arch" type="xml">
                <form string="Bounced Cheque" create="0" edit="0" delete="0">
                    <sheet>
                        <group>
                            <group string="Cheque Details">
<!--                                <field name="sequence"/>-->
                                <field name="cheque_number"/>
                                <field name="date"/>
                                <field name="remarks"/>
                                <field name="period_ids"/>
                                <field name="collected_id"/>
                                <field name="invoice_id"/>
                            </group>
                            <group string="Property Information">
                                <field name="building"/>
                                <field name="property_id"/>
                                <field name="tenant_id"/>
                                <field name="rent_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Customer issue action-->
        <record id="action_property_bounced_cheque" model="ir.actions.act_window">
            <field name="name">Bounced Cheques</field>
            <field name="res_model">property.bounced.cheque</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Bounced Cheque Details.
                </p>
            </field>
        </record>

        <record id="property_bounced_cheque_search_view" model="ir.ui.view">
            <field name="name">property.bounced.cheque.search</field>
            <field name="model">property.bounced.cheque</field>
            <field name="arch" type="xml">
                <search string="Bounced Cheques Hisotry">
                    <field name="tenant_id"/>
                    <field name="building" />
                    <field name="property_id" />
                    <field name="rent_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Tenant" context="{'group_by':'tenant_id'}" name="group_by_tenant_id"/>
                        <filter string="Building" context="{'group_by':'building'}" name="group_by_building"/>
                        <filter string="Unit" context="{'group_by':'property_id'}" name="group_by_property_id"/>
                        <filter string="Rent" context="{'group_by':'rent_id'}" name="group_by_rent_id"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>
