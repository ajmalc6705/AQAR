<?xml version="1.0"?>
<odoo>
    <data>
        <!--Landlord-->
        <record id="landlord_form" model="ir.ui.view">
            <field name="name">landlord.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="arabic_name" no_label="1" placeholder="Arabic Name"/>
                </field>
                <group name="misc" position="before">
                    <group string="Info">
                        <field name="tenant" invisible="0"/>
                        <field name="tenant_account_type"
                               attrs="{'invisible':[('tenant', '=', False)]}"/>
                        <field name="tenant_account_number"
                               attrs="{'readonly':[('tenant_account_type', 'not in', ['CR', 'CV'])],
                                'invisible':[('tenant', '=', False)]}"/>
                        <field string="Landlord" name="landlord" invisible="0"/>
                        <field name="landlord_account_type"
                               attrs="{'invisible':[('landlord', '=', False)]}"/>
                        <field name="landlord_account_number"
                               attrs="{'readonly':[('landlord_account_type', 'in', ['AG', 'EM', 'FC', 'GV', 'HT'])],
                                'invisible':[('landlord', '=', False)]}"/>
                        <field name="landlord_relation" attrs="{'invisible':[('landlord', '=', False)]}"/>
                        <field name="is_community_owner"/>
                    </group>
                </group>
                <field name="website" position="after">
                    <field name="partner_ident_no" attrs="{'invisible':[('tenant', '=', False)]}"/>
                </field>
                <!--                <xpath expr="//page[@name='accounting']" position="attributes">-->
                <!--                    <attribute name="groups">-->
                <!--                        account.group_account_invoice,account.group_account_readonly,property_management.group_maintenance_coordinator,property_management.group_maintenance_admin,purchase.group_purchase_manager-->
                <!--                    </attribute>-->
                <!--                </xpath>-->
                <!--                <xpath expr="//group[@name='accounting_entries']" position="attributes">-->
                <!--                    <attribute name="groups">-->
                <!--                        account.group_account_invoice,account.group_account_readonly,property_management.group_maintenance_coordinator,property_management.group_maintenance_admin,purchase.group_purchase_manager-->
                <!--                    </attribute>-->
                <!--                </xpath>-->
            </field>
        </record>

        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="property_lease_management.landlord_form"/>
            <field name="arch" type="xml">
                <!--                <field name="is_company" position="attributes">-->
                <!--                    <attribute name="invisible">0</attribute>-->
                <!--                    <attribute name="on_change">onchange_type(is_company)</attribute>-->
                <!--                </field>-->
                <field name="is_company" position="after">
                    <field name="is_government" class="oe_inline" invisible="1"/>
                </field>
                <field name="parent_id" position="attributes">
                    <attribute name="context">{'default_is_company': True, 'show_vat': True, 'default_tenant': tenant,
                        'default_landlord': landlord}
                    </attribute>
                </field>
                <field name="function" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('is_company','=',True),('is_government','=',True)]}
                    </attribute>
                </field>
                <field name="zip" position="attributes">
                    <attribute name="placeholder">Postal Code</attribute>
                </field>
                <field name="zip" position="after">
                    <field name="po_box" placeholder="P.O.Box"/>
                </field>
                <field name="child_ids" position="attributes">
                    <attribute name="context">{'default_parent_id': active_id, 'default_street': street,
                        'default_street2': street2, 'default_city': city, 'default_state_id': state_id, 'default_zip':
                        zip, 'default_country_id': country_id, 'default_lang': None, 'default_user_id': user_id,
                        'default_type': 'other', 'default_tenant': tenant, 'default_landlord': landlord}
                    </attribute>
                </field>
            </field>
        </record>

        <record id="view_landlord_tree" model="ir.ui.view">
            <field name="name">landlord.tree</field>
            <field name="model">res.partner</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Contacts" sample="1">
                    <field name="display_name"/>
                    <field name="function" invisible="1"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="user_id" invisible="1"/>
                    <field name="country_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_landlord_tree">
            <field name="name">Landlord</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="domain">[('landlord','=',1)]</field>
            <field name="context">
                {
                'default_landlord':1 ,'default_tenant': 0,
                'res_partner_search_mode': 'supplier', 'default_is_company': True
                }
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to create a Landlord.
                </p>
            </field>
        </record>

        <record id="action_landlord_tree_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_landlord_tree"/>
            <field name="act_window_id" ref="action_landlord_tree"/>
        </record>

        <record id="action_landlord_tree_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="landlord_form"/>
            <field name="act_window_id" ref="action_landlord_tree"/>
        </record>

        <record id="action_landlord_tree_view3" model="ir.actions.act_window.view">
            <field eval="0" name="sequence"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="base.res_partner_kanban_view"/>
            <field name="act_window_id" ref="action_landlord_tree"/>
        </record>

        <menuitem action="action_landlord_tree" parent="menu_property" id="menu_landlord" sequence="30"/>
        <!--End-->

        <!--Customer-->
        <record id="action_partner_customer_form" model="ir.actions.act_window">
            <field name="name">Tenants</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('tenant','=',1), ('parent_id','=', False)]</field>
            <field name="context">
                {
                'default_landlord':0 ,'default_tenant':1,
                'res_partner_search_mode': 'customer', 'default_is_company': True
                }
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to add a contact in your address book.
                </p>
                <p>
                    Odoo helps you easily track all activities related to
                    a customer: discussions, history of business opportunities,
                    documents, etc.
                </p>
            </field>
        </record>

        <menuitem action="property_lease_management.action_partner_customer_form"
                  parent="property_lease_management.menu_property"
                  id="menu_customer" sequence="25"/>

        <record id="view_account_payment_relate_rent_form" model="ir.ui.view">
            <field name="name">account.payment.relate.rent.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="rent_id" string="Agreement Number"
                           attrs="{'invisible':[('payment_type', '=', 'outbound')],'readonly':[('rent_id', '!=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='ref']" position="attributes">
                    <attribute name="attrs">{'readonly':[('state', 'not in', ('draft'))]}</attribute>
                </xpath>
            </field>
        </record>


        <!--End-->
    </data>
</odoo>
