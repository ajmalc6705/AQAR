<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Project Task Inherit : Tree-->
    <record id="view_task_tree2_inherit_legal_action" model="ir.ui.view">
        <field name="name">project.task.tree2.inherit.legal.action</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='user_ids']" position="after">
                <field name="legal_action_id" optional="hide"/>
            </xpath>
        </field>
    </record>
    <!--    Project Task Inherit : Form -->
    <record id="view_task_form2_inherit_legal_action" model="ir.ui.view">
        <field name="name">project.task.form.inherit.legal.action</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='extra_info']/group/group[1]/field[@name='company_id']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="options">{'no_create_edit':True, 'no_create':True, 'no_open': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='project_id']" position="after">
                <field name="legal_action_id" readonly="1" options='{"no_open": True, "no_create": True}'
                 attrs="{'invisible': [('legal_action_id', '=', False)]}"
                />
<!--                />-->

            </xpath>
        </field>
    </record>

</odoo>