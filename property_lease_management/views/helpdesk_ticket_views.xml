<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="helpdesk_ticket_complaint_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.complaint.view.form.inherit.crm</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email_cc']" position="after">
                    <field name="building_id"/>
                <field name="property_id"/>
                </xpath>
            <xpath expr="//button[@name='assign_ticket_to_self']" position="after">
                 <button class="btn-primary" name="action_create_complaints" type="object" string="Create Complaints"
                        />
            </xpath>
        </field>
    </record>
</odoo>