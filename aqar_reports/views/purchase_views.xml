<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="purchase_type_view" model="ir.ui.view">
        <field name="name">purchase.order.type.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="purchase_type_id"/>
            </field>
            <field name="currency_id" position="before">
                <field name="project_id" force_save="1"/>
            </field>

<!--            <xpath expr="//div[@name='reminder']" position="after">-->
            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="contact_person" attrs="{'readonly': [('state', 'not in', ('draft', 'sent', 'to approve'))]}"/>
            </xpath>
            <xpath expr="//group[@name='invoice_info']" position="after">
                <group name="co_stamp" string="Company Stamp">
                    <group>
                        <field name="co_stamp_seal" widget="image" no_label="1" options="{'size': [0, 100]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
    <record id="view_company_form_report" model="ir.ui.view">
        <field name="name">res.company.form.report</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page" position="after">
                <page name="report_layout" string="Report Layout">
                    <group>
                        <field name="header"/>
                        <field name="footer"/>
                    </group>
                    <group>
                        <group>
                            <field name="co_stamp_seal" widget="image" options="{'size': [0, 100]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>