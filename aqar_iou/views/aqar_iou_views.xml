<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="aqar_iou_tree" model="ir.ui.view">
        <field name="name">aqar.iou.tree</field>
        <field name="model">aqar.iou</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="doc_date"/>
                <field name="required"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>
    <!--    IoU Form View-->
    <record id="aqar_iou_form" model="ir.ui.view">
        <field name="name">aqar.iou.form</field>
        <field name="model">aqar.iou</field>
        <field name="arch" type="xml">
            <form string="IoU">
                <header>
                    <button name="action_approve" type="object" string="Confirm"
                            states="draft" class="btn-primary"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft,confirm"/>
                    <button name="action_reset_draft" type="object" string="Reset to Draft" states="cancel,confirm"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ref" placeholder="IoU"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="required" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="doc_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>

                        </group>
                        <group>
                            <field name="company_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="currency_id" invisible="1"/>

                        </group>
                    </group>
                    <notebook>
                        <page name="Description" String="Description">
                            <field name="notes" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <!--    window action for IoU-->
    <record id="action_iou" model="ir.actions.act_window">
        <field name="name">IoU</field>
        <field name="res_model">aqar.iou</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                IoU
            </p>
        </field>
    </record>
    <menuitem id="iou_menu" name="IoU" parent="hr.menu_hr_employee_user"
              action="action_iou"/>
</odoo>