    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.service</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="45"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="property_service" string="Property Service"
                     data-key="property_service">
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 o_setting_box">
                            <h2>Property Service Journal</h2>
                            <group>
                                <group>
                                    <field name="journal_id"/>
                                </group>
                            </group>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'property_service'}</field>
    </record>
    <menuitem id="property_config_menu" name="Configuration" parent="property_service_main_menu"
              sequence="60"/>
    <!--    <menuitem id="service_stage_menu" name="Service Stages" parent="property_config_menu"-->
    <!--              action="action_service_stage" sequence="60"/>-->
    <menuitem id="settings_menu" name="Settings" parent="property_config_menu"
              action="action_settings" sequence="30"/>

    <!--    Property Views -->
    <record id="property_inherited_view" model="ir.ui.view">
        <field name="name">Property</field>
        <field name="model">property.property</field>
        <field name="inherit_id" ref="property_lease_management.view_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']/field[@name='owned']" position="before">
                <field name="for_service"/>
                <label for="for_service"/>
            </xpath>
        </field>
    </record>

</odoo>