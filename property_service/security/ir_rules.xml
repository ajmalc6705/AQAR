<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">

    <!-- Multi - Company Rules -->
      <record id="property_service_multi_company_rule" model="ir.rule">
        <field name="name">Multi company rules for Property Service</field>
        <field name="model_id" ref="model_property_service"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
      <record id="personal_service_rule" model="ir.rule">
        <field name="name">Property Service :Personal Service</field>
        <field name="model_id" ref="model_property_service"/>
        <field name="domain_force">['|',('create_uid','=',user.id),('create_uid','=',False)]</field>
          <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
    </record>

    <record id="property_service_see_all_user_rule" model="ir.rule">
        <field name="name">Property Service All Users Rule</field>
        <field name="model_id" ref="model_property_service"/>
        <field name="active" eval="True"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('property_service.group_service_user_all'))]"/>
    </record>

    <record id="property_service_see_admin_rule" model="ir.rule">
        <field name="name">Property Service Admin Rule</field>
        <field name="model_id" ref="model_property_service"/>
        <field name="active" eval="True"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('property_service.group_service_admin'))]"/>
    </record>







</odoo>
