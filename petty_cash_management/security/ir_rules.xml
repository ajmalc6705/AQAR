<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">

    <!-- Multi - Company Rules -->
    <record id="petty_cash_expense_multi_company_rule" model="ir.rule">
        <field name="name">Multi company rules for Petty Cash Expense</field>
        <field name="model_id" ref="model_petty_cash_expense"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record id="add_petty_cash_multi_company_rule" model="ir.rule">
        <field name="name">Multi company rules Add Petty Cash model</field>
        <field name="model_id" ref="model_add_petty_cash"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <!-- Multi - Petty cash expenses assignation rules -->

    <record id="petty_cash_expense_personal_rule" model="ir.rule">
        <field name="name">Own Documents</field>
        <field ref="model_petty_cash_expense" name="model_id"/>
        <field name="domain_force">['|','|',('user_id','=',user.id),('user_id','=',False),('user_ids','in',user.id)]</field>
        <field name="groups" eval="[(4, ref('petty_cash_management.group_employee'))]"/>
    </record>
    <record id="petty_cash_expense_see_all" model="ir.rule">
        <field name="name">All Petty Cash Expenses</field>
        <field ref="model_petty_cash_expense" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups"
               eval="[(4, ref('petty_cash_management.group_finance_manager'))]"/>
    </record>

</odoo>
