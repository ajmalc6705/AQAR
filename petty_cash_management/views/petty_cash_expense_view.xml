<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="petty_cash_expense_form_view" model="ir.ui.view">
        <field name="name">petty.cash.expense.form.view</field>
        <field name="model">petty.cash.expense</field>
        <field name="arch" type="xml">
            <form string="Petty Cash Expense">
                <header>
                    <!--                    <button name="send_for_approval" string="SEND FOR APPROVAL"-->
                    <!--                            type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>-->
                    <button name="create_bill" class="oe_highlight" string="Create Bill"
                            type="object" invisible="1">
                        <!--                            attrs="{'invisible': ['|',('state', 'in', ['draft','cancel','approved','reject']),('bill_state', '=', 'billed')]}">-->
                    </button>

                    <button name="action_send_to_authorizer" string="Send to Authorizer"
                            type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"
                            groups="petty_cash_management.group_employee,petty_cash_management.group_officer,petty_cash_management.group_finance_manager"/>

                    <button name="reject" string="REJECT"
                            type="object" class="oe_highlight"
                            groups="petty_cash_management.group_gm_approved"
                            attrs="{'invisible': [('state', 'not in', ('verified'))]}"/>

                    <button name="action_button_send_back" string="Send Back" type="object" class="oe_highlight"
                            attrs="{'invisible': [('state', 'not in', ('waiting'))]}"
                            groups="petty_cash_management.group_officer"/>

                    <button name="action_button_send_back" string="Send Back" type="object" class="oe_highlight"
                            attrs="{'invisible': [('state', 'not in', ('verified'))]}"
                            groups="petty_cash_management.group_gm_approved"/>

                    <!--                    <button name="action_button_send_back" string="Send Back" type="object" class="oe_highlight"-->
                    <!--                            attrs="{'invisible': [('state', 'in', ('posted', 'reject', 'draft','cancel'))]}"-->
                    <!--                            groups="petty_cash_management.group_officer,petty_cash_management.group_finance_manager"/>-->

                    <button name="action_button_verify" string="Verify"
                            type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'waiting')]}"
                            groups="petty_cash_management.group_officer"/>

                    <button name="action_button_approve" string="Approve"
                            type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'verified')]}"
                            groups="petty_cash_management.group_gm_approved"/>

                    <button name="approve_officer" string="Post"
                            type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'approved')]}"
                            groups="petty_cash_management.group_officer,petty_cash_management.group_finance_manager"/>
                    <!--                    <button name="send_for_finance_approval" string="SEND FOR FINANCE APPROVAL"-->
                    <!--                            attrs="{'invisible': [('state', '!=', 'pending_approval')]}"-->
                    <!--                            type="object" class="oe_highlight"-->
                    <!--                            groups="petty_cash_management.group_officer"/>-->
                    <!--                    <button name="approve_finance" string="APPROVE"-->
                    <!--                            type="object" class="oe_highlight"-->
                    <!--                            attrs="{'invisible': [('state', 'not in', ('pending_finance_approval','pending_approval'))]}"-->
                    <!--                            groups="petty_cash_management.group_finance_manager"/>-->

                    <button name="reset_to_draft" string="RESET TO DRAFT"
                            type="object" class="oe_highlight" attrs="{'invisible': 1}"
                            groups="petty_cash_management.group_finance_manager"/>
                    <button name="cancel" string="CANCEL"
                            type="object" class="oe_highlight"
                            groups="petty_cash_management.group_employee"
                            attrs="{'invisible': [('state', 'not in', ('draft'))]}"
                    />
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" required="1" attrs="{'readonly': [('state','!=','draft')]}"
                                   options="{'no_create_edit':True, 'no_create':True, 'no_open':True}"
                            />
                            <field name="paid_to" required="0" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="expense_type_id" required="0" attrs="{'readonly': [('state','!=','draft')]}"
                                   options="{'no_create_edit':True, 'no_create':True, 'no_open':True}"
                            />
                            <field name="expense" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="amount" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="bill_date" required="1" string="Ref Date"
                                   attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="invoice_number" required="1" string="Ref Number"
                                   attrs="{'readonly': [('state','!=','draft')]}"/>
<!--                            <field name="bill_id" invisible="1"/>-->
                            <field name="invoice_amount" invisible="1"/>
                            <field name="currency_id" readonly="1" invisible="1"/>
                            <field name="check_amount_in_words" invisible="1"/>
                        </group>
                        <group>

                            <field name="create_date" readonly="1"/>
                            <field name="group_officer" invisible="True"/>
                            <field name="officer_remarks" string="Remark" attrs="{'readonly': ['|', ('group_officer','!=',True),
                             ('state', 'in', ['posted','reject','cancel'])],'invisible': [('state','=', 'draft')]}"
                            />
                            <field name="bill_state" invisible="1"/>
                            <field name="file_name" invisible="1"/>
                            <!--                            <field name="cheque_number"/>-->
                            <!--                            <field name="cheque_date"/>-->
                            <field name="in_hand_petty_cash"/>
                            <field name="pending_amount"/>
                            <field name="user_ids" widget="many2many_tags"
                                   attrs="{'readonly': [('state','!=','draft')]}"
                                   options="{'no_quick_create': True, 'no_create_edit': True,'no_create': True, 'no_open': True}"/>
                            <field name="company_id" readonly="1" invisible="0"
                                   groups="base.group_multi_company"
                                   options="{'no_quick_create': True, 'no_create_edit': True,'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Accounting" groups="petty_cash_management.group_finance_manager">

                            <group>
                                <group>
                                    <field name="journal_id"
                                           options="{'no_edit': True, 'no_create': True, 'no_open': True}"
                                           attrs="{'readonly': [('state', 'in', ['posted', 'cancel', 'reject'])]}"
                                           domain="[('type', '=', 'cash'),('is_petty_cash_journal','=',True)]"/>
                                    <field name="journal_entry_id"/>
                                    <field name="tax_ids" widget="many2many_tags" invisible="1"/>
                                </group>
                                <group>
                                    <field name="date"
                                           attrs="{'readonly': [('state','in', ['posted', 'cancel', 'reject'])]}"/>
                                    <field name="analytic_distribution" widget="analytic_distribution"
                                           options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    <field name="debit_id"
                                           attrs="{'readonly': [('state', 'in', ['posted', 'cancel', 'reject'])]}"/>

                                    <!--                                    <field name="account_analytic" widget="many2many_tags"/>-->

                                    <field name="credit_id" readonly="1" force_save="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <div class="o_attachment_preview"/>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="petty_cash_expense_tree_view" model="ir.ui.view">
        <field name="name">petty.cash.expense.view.tree</field>
        <field name="model">petty.cash.expense</field>
        <field name="arch" type="xml">
            <tree string="Petty cash Expense" default_order="name desc">
                <field name="date"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="paid_to" optional="hide"/>
                <field name="create_date" optional="hide"/>
                <field name="expense"/>
                <field name="expense_type_id" optional="show"/>
                <field name="journal_id"/>
                <field name="amount"/>
                <field name="officer_remarks"/>
                <field name="company_id" optional="hide"/>
                <field name="state" widget="badge" decoration-muted="state == 'cancel'"
                       decoration-info="state  == 'draft'" decoration-warning="state in ('waiting','verified')"
                       decoration-danger="state == 'reject'" decoration-success="state in ('approved', 'posted')"/>
            </tree>
        </field>
    </record>

    <record id="petty_cash_expence_filter_view" model="ir.ui.view">
        <field name="name">Petty Cash Expense</field>
        <field name="model">petty.cash.expense</field>
        <field name="arch" type="xml">
            <search>
                <field name="user_id"/>
                <field name="name"/>
                <!--                <field name="journal"/>-->
                <group expand="1" string="Group By">
                    <filter name="user" string="User" context="{'group_by':'user_id'}"/>
                    <filter name="number" string="Number" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_petty_cash_expense" model="ir.actions.act_window">
        <field name="name">Petty Cash Expense</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">petty.cash.expense</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Petty Cash Expense
            </p>
        </field>
    </record>

    <menuitem id="petty_cash_main_menu" name="Petty cash"
              groups="petty_cash_management.group_add_petty_cash_ceo,petty_cash_management.group_add_petty_cash_manager,petty_cash_management.group_finance_manager,petty_cash_management.group_gm_approved,petty_cash_management.group_officer,petty_cash_management.group_employee"
              web_icon="petty_cash_management,static/description/odoo_icon.png"

    />

    <menuitem id="menu_petty_cash_management"
              name="Petty Cash"
              parent="petty_cash_main_menu"
              sequence="1"
              groups="petty_cash_management.group_finance_manager,petty_cash_management.group_gm_approved,petty_cash_management.group_officer,petty_cash_management.group_employee"
    />
    <menuitem id="menu_employee_expense"
              name="Petty Cash Expense"
              parent="menu_petty_cash_management"
              action="action_petty_cash_expense"
    />

    <menuitem id="menu_add_petty_cash"
              action="action_add_petty_cash"
              name="Add Petty Cash"
              parent="petty_cash_management.petty_cash_main_menu"
              groups="petty_cash_management.group_finance_manager,petty_cash_management.group_add_petty_cash_manager,petty_cash_management.group_add_petty_cash_ceo"

    />


</odoo>
