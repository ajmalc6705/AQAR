<odoo>

    <record id="view_petty_cash_expense_type_tree" model="ir.ui.view">
        <field name="name">petty.cash.expense.type.tree</field>
        <field name="model">petty.cash.expense.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Type name"/>
                <field name="user_ids" widget="many2many_tags" invisible="0"
                       options="{'no_quick_create': True, 'no_create_edit': True,'no_create': True, 'no_open': True}"/>
            </tree>
        </field>
    </record>

    <record id="view_petty_cash_expense_type_form" model="ir.ui.view">
        <field name="name">petty.cash.expense.type.form.view</field>
        <field name="model">petty.cash.expense.type</field>
        <field name="arch" type="xml">
            <form string="Petty Cash Expense Type">
                <sheet>
                    <label for="name" string="Name"/>
                    <h1>
                        <field name="name" placeholder="e.g. Lunch Expenses"/>
                    </h1>
                    <group>
                        <group>
                            <field name="user_ids" widget="many2many_tags"
                                   options="{'no_create_edit':True, 'no_create':True, 'no_open':True}"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>


    <record id="action_petty_cash_expense_type" model="ir.actions.act_window">
        <field name="name">Petty Cash Expense Type</field>
        <field name="res_model">petty.cash.expense.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New Petty Cash Expense Types
            </p>
        </field>
    </record>
    <menuitem id="petty_cash_expense_type_menu" name="Petty Cash Expense Type" parent="petty_cash_main_menu"
              sequence="50"
              groups="petty_cash_management.group_finance_manager" action="action_petty_cash_expense_type"/>
</odoo>
