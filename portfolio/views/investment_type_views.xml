<?xml version="1.0" encoding="UTF-8"?>
<odoo>
       <record id="investment_type_tree_view" model="ir.ui.view">
        <field name="name">investment.type.tree</field>
        <field name="model">investment.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_investment_type" model="ir.actions.act_window">
        <field name="name">Investment Type</field>
        <field name="res_model">investment.type</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Investment Type
            </p>
        </field>
    </record>

    <menuitem id="investment_type_menu" name="Investment Type" parent="investment_config_menu"
              action="action_investment_type"/>
</odoo>