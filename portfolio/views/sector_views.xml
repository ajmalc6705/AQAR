<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="investment_sectors_tree_view" model="ir.ui.view">
        <field name="name">investment.sectors.tree</field>
        <field name="model">investment.sector</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_sectors" model="ir.actions.act_window">
        <field name="name">Sectors</field>
        <field name="res_model">investment.sector</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Sectors
            </p>
        </field>
    </record>

    <record id="investment_sub_sectors_tree_view" model="ir.ui.view">
        <field name="name">investment.subsectors.tree</field>
        <field name="model">investment.subsector</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_sub_sectors" model="ir.actions.act_window">
        <field name="name">Sub Sectors</field>
        <field name="res_model">investment.subsector</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                SubSector
            </p>
        </field>
    </record>

    <menuitem id="investment_sector_menu" name="Sectors" parent="investment_config_menu"
              action="action_sectors"/>
    <menuitem id="investment_sub_sector_menu" name="SubSectors" parent="investment_config_menu"
              action="action_sub_sectors"/>
</odoo>