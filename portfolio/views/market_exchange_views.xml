<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="market_updation_tree_view" model="ir.ui.view">
        <field name="name">market.updation.tree</field>
        <field name="model">market.updation</field>
        <field name="arch" type="xml">
            <tree editable="top" default_order="updation_date desc">
                <field name="investment_id"/>
                <field name="updation_date"/>
                <field name="rate"/>
            </tree>
        </field>
    </record>
    <record id="action_market_updation" model="ir.actions.act_window">
        <field name="name">Market Updation</field>
        <field name="res_model">market.updation</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Market Updation
            </p>
        </field>
    </record>
    <menuitem id="market_updation_menu" name="Market Updation" parent="transactions_menu"
              sequence="60"
              action="action_market_updation"/>

</odoo>