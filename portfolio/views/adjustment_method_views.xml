<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="adjustment_method_tree_view" model="ir.ui.view">
        <field name="name">adjustment.method.tree</field>
        <field name="model">adjustment.method</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_adjustment_method" model="ir.actions.act_window">
        <field name="name">Adjustment Method</field>
        <field name="res_model">adjustment.method</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
               Adjustment Method
            </p>
        </field>
    </record>
    <menuitem id="adjustment_method_menu" name="Adjustment Method" parent="investment_config_menu"
              sequence="80"
              action="action_adjustment_method"/>
</odoo>