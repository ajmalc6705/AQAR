<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="investment_exchange_tree_view" model="ir.ui.view">
        <field name="name">investment.exchange.tree</field>
        <field name="model">investment.exchange</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_investment_exchange" model="ir.actions.act_window">
        <field name="name">Exchange</field>
        <field name="res_model">investment.exchange</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
               Exchange
            </p>
        </field>
    </record>
    <menuitem id="investment_exchange_menu" name="Exchange" parent="investment_config_menu"
              sequence="60"
              action="action_investment_exchange"/>
</odoo>