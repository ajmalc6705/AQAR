<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="account_asset_tree" model="ir.ui.view">
        <field name="name">account.asset.location.tree</field>
        <field name="model">account.asset.location</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="seq"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_location_asset" model="ir.actions.act_window">
        <field name="name">Location Asset</field>
        <field name="res_model">account.asset.location</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Asset Location
            </p>
        </field>
    </record>
    <menuitem id="account_asset_location_menu" name="Asset Location"
              action="action_location_asset" parent="account.menu_finance_configuration"/>


    <record id="view_account_asset_location_form" model="ir.ui.view">
        <field name="name">account.asset.inherit.form</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='main_page']" position="inside">
                <group>
                     <group name="asset_location" string="Asset Location">
                    <field name="account_location_id"/>
                </group>
                </group>

            </xpath>
            <xpath expr="//sheet/notebook/page[@name='main_page']" position="after">
                <page name="valuation" string="Valuation">
                    <field name="valuation_line_ids">
                        <tree editable="bottom">
                            <field name="date"/>
                            <field name="valuator_id"/>
                            <field name="description"/>
                            <field name="valuation_amount"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>