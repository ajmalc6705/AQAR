<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_signature_password_wizard_form" model="ir.ui.view">
        <field name="name">signature.password.check.wizard.form</field>
        <field name="model">signature.password.check.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="sign_password" widget="password" password="True"/>
                </group>

                <footer>
                    <button
                            name="validate_password_and_write_signature"
                            string="Confirm"
                            type="object"
                            class="oe_highlight"
                    />
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_signature_password_check" model="ir.actions.act_window">
        <field name="name">Password Check</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">signature.password.check.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_signature_password_wizard_form"/>
        <field name="target">new</field>
    </record>

    <record id="view_signature_password_wizard_form_initial" model="ir.ui.view">
        <field name="name">signature.password.check.wizard.form.initial.sign</field>
        <field name="model">signature.password.check.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="sign_password" widget="password" password="True"/>
                </group>

                <footer>
                    <button
                            name="validate_initial_sign_password_and_write_signature"
                            string="Confirm" type="object" class="oe_highlight"
                    />
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_signature_initial_sign_password_check" model="ir.actions.act_window">
        <field name="name">Password Check</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">signature.password.check.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_signature_password_wizard_form_initial"/>
        <field name="target">new</field>
    </record>
</odoo>