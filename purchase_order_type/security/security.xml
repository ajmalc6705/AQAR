<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="group_purchase_authorizer" model="res.groups">
        <field name="name">COORDINATOR</field>
        <field name="category_id" ref="base.module_category_inventory_purchase"/>
    </record>

    <record id="group_purchase_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_inventory_purchase"/>
    </record>

    <record id="group_purchase_general_manager" model="res.groups">
        <field name="name">GM</field>
        <field name="category_id" ref="base.module_category_inventory_purchase"/>
    </record>


    <record id="group_purchase_ceo" model="res.groups">
        <field name="name">CEO</field>
        <field name="category_id" ref="base.module_category_inventory_purchase"/>
    </record>
    <!--    User group for Digital signature in PO-->
    <record id="group_digital_signature" model="res.groups">
        <field name="name">Internal Digital Signature</field>
    </record>

    <!--   ***** PURCHASE REQUISITION USER GROUPS ************ -->
    <record model="ir.module.category" id="module_category_purchase_requisition">
        <field name="name">Purchase Requisition</field>
        <field name="sequence">17</field>
    </record>

    <record id="group_purchase_requisition_user" model="res.groups">
        <field name="name">Checker</field>
        <field name="category_id" ref="module_category_purchase_requisition"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_purchase_requisition_user_verifier" model="res.groups">
        <field name="name">Verifier</field>
        <field name="category_id" ref="module_category_purchase_requisition"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_purchase_requisition_user_confirm" model="res.groups">
        <field name="name">Confirmer</field>
        <field name="category_id" ref="module_category_purchase_requisition"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_purchase_requisition_user_approve" model="res.groups">
        <field name="name">Approver</field>
        <field name="category_id" ref="module_category_purchase_requisition"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>


</odoo>