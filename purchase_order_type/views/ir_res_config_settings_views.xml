<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_res_config_settings_form_inherit_limit_amount" model="ir.ui.view">
        <field name="name">purchase.res.config.settings.inherit.limit.amount</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='po_order_approval']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="po_order_limit">
                    <div class="o_setting_left_pane">
                        <field name="po_order_limit"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="po_order_limit"/>
                        <span class="fa fa-lg fa-building-o"  title="Building Icon"/>
                        <div class="text-muted">
                            Request CEO to approve orders above a the amount
                        </div>
                        <div class="content-group" attrs="{'invisible': [('po_order_limit', '=', False)]}">
                            <div class="row mt16">
                                <label for="po_limit_amount" class="col-lg-4 o_light_label"/>
                                <field name="po_limit_amount"/>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>