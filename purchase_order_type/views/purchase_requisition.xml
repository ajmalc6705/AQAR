<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_purchase_requisition_form_inherit_view" model="ir.ui.view">
            <field name="name">purchase.requisition.form.inherit</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_in_progress']" position="before">
                    <!--                    <field name="approval_status_1" invisible="1"/>-->
                    <!--                    <field name="approval_status_2" invisible="1"/>-->
                    <!--                    <field name="approval_status_3" invisible="1"/>-->
                    <button name="update_approve_status_one" class="oe_highlight" string="Send To Authorizer"
                            states="draft" type="object"
                            groups="purchase_order_type.group_purchase_requisition_user"
                    />
                    <button name="button_action_send_ongoing" class="oe_highlight" string="Authorize"
                            states="authorizer" type="object"
                            groups="purchase_order_type.group_purchase_requisition_user"
                    />
                    <button name="update_approve_status_two" class="oe_highlight" string="Verify" states="ongoing"
                            type="object" groups="purchase_order_type.group_purchase_requisition_user_verifier"
                    />
                    <button name="update_approve_status_three" class="oe_highlight" string="Confirm"
                            states="verified" type="object"
                            groups="purchase_order_type.group_purchase_requisition_user_confirm"
                    />

                    <button name="action_button_send_back" string="Send Back" states="authorizer" type="object"/>

                    <button name="action_button_send_back" string="Send Back" states="ongoing" type="object"
                            groups="purchase_order_type.group_purchase_requisition_user_verifier"
                    />

                    <button name="action_button_send_back" string="Send Back" states="verified" type="object"
                            groups="purchase_order_type.group_purchase_requisition_user_confirm"
                    />

                    <button name="action_button_send_back" string="Send Back" states="confirm" type="object"
                            groups="purchase_order_type.group_purchase_requisition_user_approve"
                    />


                    <!--                    <button name="action_button_send_back" string="Send Back" states="in_progress" type="object"-->
                    <!--                            groups="purchase_order_type.group_purchase_requisition_user_approve"-->
                    <!--                    />-->


                </xpath>
                <xpath expr="//button[@name='action_in_progress']" position="attributes">
                    <attribute name="states">confirm</attribute>
                    <attribute name="string">Approve</attribute>
                    <attribute name="groups">purchase_order_type.group_purchase_requisition_user_approve</attribute>
                </xpath>

                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="states">confirm,in_progress</attribute>
                    <attribute name="string">Reject</attribute>
                    <attribute name="groups">purchase_order_type.group_purchase_requisition_user_approve</attribute>
                </xpath>
                <xpath expr="//button[@name='action_done']" position="attributes">
                    <attribute name="states">open</attribute>
                </xpath>

                <xpath expr="//field[@name='type_id']" position="after">
                    <field name="is_vehicle_requisition" invisible="1" foce_save="1"/>
                    <field name="vehicle_id" required="0"
                           attrs="{'invisible': [('is_vehicle_requisition', '=', False)]}"
                           options="{'no_create': True, 'no_create_edit':True,'no_open': True}"/>
                    <field name="requested_by" required="1"/>
                    <field name="project_id" required="1"/>
                </xpath>

            </field>

        </record>

        <record id="view_purchase_requisition_tree_inherit" model="ir.ui.view">
            <field name="name">purchase.requisition.tree.inherit</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="before">
                    <field name="type_id" optional="hide"/>
                    <field name="vehicle_id" optional="hide"/>
                </xpath>
            </field>
        </record>


        <record id="view_purchase_requisition_type_form_inherit_is_related_vehicle" model="ir.ui.view">
            <field name="name">purchase.requisition.type.form.inherit</field>
            <field name="model">purchase.requisition.type</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_type_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                    <field name="is_vehicle_requisition"/>

                </xpath>
            </field>
        </record>


    </data>
</odoo>
