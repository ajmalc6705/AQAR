<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.module.category" id="module_category_assignments">
        <field name="name">Project Assignments</field>
        <field name="sequence">18</field>
    </record>
    <record id="group_assignment_user_own" model="res.groups">
        <field name="name">Assignment User</field>
        <field name="category_id" ref="module_category_assignments"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_assignment_manager_own" model="res.groups">
        <field name="name">Assignment Manager</field>
        <field name="category_id" ref="module_category_assignments"/>
        <field name="implied_ids" eval="[(4, ref('aqar_project_assignment.group_assignment_user_own'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>


    <record id="assignment_user_own_rule" model="ir.rule">
        <field name="name">Assignment User Own Rule</field>
        <field ref="model_project_project" name="model_id"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('aqar_project_assignment.group_assignment_user_own'))]"/>
    </record>

    <record id="assignment_manager_access" model="ir.rule">
        <field name="name">Assignment manager: admin full access</field>
        <field name="model_id" ref="model_project_project"/>
        <field name="groups" eval="[(4, ref('aqar_project_assignment.group_assignment_manager_own'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>