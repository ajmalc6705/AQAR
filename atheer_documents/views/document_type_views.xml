<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="document_type_tree" model="ir.ui.view">
        <field name="name">document.type.tree</field>
        <field name="model">document.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email_notification"/>
                <field name="odoo_notification"/>
                <field name="user_ids" widget="many2many_tags"/>
                <field name="doc_expiry_before_days" widget="many2many_tags"/>
            </tree>
        </field>
    </record>
    <!--    Documents Form View-->
    <record id="atheer_view_document_type_form" model="ir.ui.view">
        <field name="name">view.document.type.form</field>
        <field name="model">document.type</field>
        <field name="arch" type="xml">
            <form string="Document Type">
                <sheet>
                    <label for="name" string="Name"/>
                    <h1>
                        <field name="name" placeholder="e.g. passport"/>
                    </h1>
                    <group>
                        <group string="Configuration">
                            <field name="email_notification"/>
                            <field name="odoo_notification"/>
                        </group>
                        <group string="Notification">
                            <field name="user_ids" widget="many2many_tags"
                                   options="{'no_create_edit':True,'no_open':True,'no_edit':True,'no_create':True}"/>
                            <field name="doc_expiry_before_days" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_document_type_atheer" model="ir.actions.act_window">
        <field name="name">Document Type</field>
        <field name="res_model">document.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('atheer_documents.document_type_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('atheer_documents.atheer_view_document_type_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Document Types
            </p>
        </field>
    </record>
    <menuitem id="document_type_menu" name="Document Type" parent="document_main_menu"
              sequence="50"
              groups="atheer_documents.group_doc_admin" action="action_document_type_atheer"/>
</odoo>