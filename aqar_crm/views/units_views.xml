<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_units" model="ir.actions.act_window">
        <field name="name">Units</field>
        <field name="res_model">property.property</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('for_sale', '=', True),('state','=','open')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Property
            </p>
        </field>
    </record>
    <menuitem id="units_menu" name="Units" parent="crm.crm_menu_sales" action="action_units" sequence="120"/>

    <record id="view_crm_sale_config_form" model="ir.ui.view">
        <field name="name">view.crm.notification.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='crm']" position="inside">
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 o_setting_box">
                         <h2>Offer Template</h2>
                        <group>
                            <group>
                                <field name="sale_offer_notes" widget="html"/>
                            </group>
                            <group>
                                <field name="rent_offer_notes" widget="html"/>
                            </group>
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>