<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="terms_conditions_tree" model="ir.ui.view">
        <field name="name">terms.conditions.tree</field>
        <field name="model">terms.conditions</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record id="terms_conditions_form" model="ir.ui.view">
        <field name="name">terms.conditions.form</field>
        <field name="model">terms.conditions</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>
    <record id="action_terms" model="ir.actions.act_window">
        <field name="name">Terms &amp; Conditions</field>
        <field name="res_model">terms.conditions</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Terms &amp; Conditions
            </p>
        </field>
    </record>
    <menuitem id="terms_conditions_menu" name="Terms &amp; Conditions" parent="crm.crm_menu_config"
              action="action_terms" sequence="60"/>
    <!--    Property Tag-->
    <record id="property_tags_tree" model="ir.ui.view">
        <field name="name">property.tags.tree</field>
        <field name="model">property.tags</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_tags" model="ir.actions.act_window">
        <field name="name">Property tags</field>
        <field name="res_model">property.tags</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Property Tags
            </p>
        </field>
    </record>
    <menuitem id="property_tags_menu" name="Property Tags" parent="crm.crm_menu_config" action="action_tags"
              sequence="80"/>
    <!--    sub type-->
    <record id="sub_type_tree" model="ir.ui.view">
        <field name="name">sub.type.tree</field>
        <field name="model">sub.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_sub_types" model="ir.actions.act_window">
        <field name="name">Sub Type</field>
        <field name="res_model">sub.type</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Sub Type
            </p>
        </field>
    </record>
    <menuitem id="sub_type_menu" name="Sub Types" parent="crm.crm_menu_config" action="action_sub_types"
              sequence="120"/>
</odoo>