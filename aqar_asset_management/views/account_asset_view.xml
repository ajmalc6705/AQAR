<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="aqar_view_account_asset_model_form">
            <field name="name">aqar.account.model.form</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='prorata_computation_type']" position="after">
                    <field name="yearly_percentage" widget="percentage"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_account_asset_form_inherit">
            <field name="name">account.asset.form.inherit</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]" position="before">
                    <div class="oe_title">
                        <label for="asset_code" string="Asset Code"/>
                        <h1>
                            <field name="asset_code" readonly="1"/>
                        </h1>
                    </div>

                </xpath>
                <field name="prorata_date" position="after">
                    <field name="monthly_depreciation"/>
                    <field name="duration_months"/>
                    <field name="depreciated_amount"/>
                    <field name="remaining_amount"/>
                </field>
                <xpath expr="//page[@name='main_page']" position="inside">
                    <group>
                        <group string="Other Info">
                            <field name="location_id"/>
                            <field name="asset_active_date"/>
                            <field name="warranty_expiry_date"/>
                            <field name="supplier_id"/>
                            <field name="asset_quantity"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//page[@name='main_page']" position="after">
                    <page string="Tax Based">
                        <group>
                            <group>
                                <field name="tax_based_amount"/>
                                <field name="tax_based_months"/>
                                <field name="tax_based_method"/>
                                <field name="monthly_amount"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_account_asset_tree_inherit">
            <field name="name">account.asset.tree.inherit</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_purchase_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="asset_code"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="asset_location_change_tree">
            <field name="name">asset.location.change.tree</field>
            <field name="model">asset.location.change</field>
            <field name="arch" type="xml">
                <tree editable="top" create="0">
                    <field name="asset_id"/>
                    <field name="old_location_id"/>
                    <field name="new_location_id"/>
                    <field name="write_date" string="Updated On"/>
                    <field name="write_uid" string="Updated By"/>
                </tree>
            </field>
        </record>

        <record id="action_asset_location_change" model="ir.actions.act_window">
            <field name="name">Asset Location Change</field>
            <field name="res_model">asset.location.change</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem
                id="menu_action_asset_location_change"
                parent="account.menu_finance_reports"
                action="action_asset_location_change"
                name="Asset Location Change"
                sequence="30"
        />
    </data>
</odoo>
